{% assign block_settings = block.settings %}

{% liquid
  assign onboarding = false

  if article == blank
    assign onboarding = true
    # Assign placeholder variables
    assign display_title = 'placeholders.blog_post_title' | t
    assign display_author = 'placeholders.blog_post_author' | t
    assign display_date = 'placeholders.blog_post_date' | t
    assign display_description = 'placeholders.blog_post_description' | t
  else
    assign display_title = article.title
    assign display_author = article.author
    assign display_date = article.published_at
    assign display_description = null
  endif

  assign truncate_description = true
  if section.settings.layout_type == 'editorial'
    assign truncate_description = false
  endif
%}

{% capture image %}
  {% content_for 'block',
    id: 'image',
    type: '_featured-blog-posts-image',
    image: article.image,
    parent_block_id: block.id
  %}
{% endcapture %}

{% capture title %}
  {% content_for 'block', id: 'title', type: '_heading', text: display_title %}
{% endcapture %}

{% capture details %}
  {% content_for 'block',
    id: 'blog-post-info-text',
    type: '_blog-post-info-text',
    alignment: block_settings.alignment,
    author: display_author,
    date: display_date
  %}
{% endcapture %}

{% capture description %}
  {% content_for 'block',
    id: 'blog-post-description',
    type: '_blog-post-description',
    article: article,
    show_read_more: false,
    should_truncate: truncate_description,
    onboarding_text: display_description
  %}
{% endcapture %}

<div
  class="
    featured-blog-posts-card spacing-style border-style
    {% if section.settings.layout_type == 'editorial' %}blog-post-card--flexible-aspect-ratio{% endif %}
    {% if block_settings.inherit_color_scheme == false %}color-{{ block_settings.color_scheme }}{% endif %}
    {% if block_settings.layout == 'horizontal' %}featured-blog-posts-card--horizontal featured-blog-posts-card--wide-image{% endif %}
  "
  data-block-id="{{ block.id }}"
  data-testid="featured-blog-posts-card"
  {% if onboarding %}
    data-placeholder="true"
  {% endif %}
  style="
    {%- render 'spacing-style', settings: block_settings -%}
    {%- render 'border-override', settings: block_settings -%}
    --text-align: {{ block_settings.alignment }};
    --horizontal-alignment: {{ block_settings.alignment }};
    --gap: {{ block_settings.gap }}px;
  "
  {{ block.shopify_attributes }}
>
  <a
    class="featured-blog-posts-card__link"
    {% unless onboarding %}
      href="{{ article.url }}"
    {% endunless %}
  >
    <span class="visually-hidden">{{ display_title }}</span>
  </a>

  {% if block_settings.layout == 'horizontal' %}
    <!-- Horizontal layout với các style tùy chỉnh của bạn -->
    <div class="featured-blog-posts-card__inner" style="display: flex; flex-direction: row; align-items: flex-start; width: 100%;">
      {% if onboarding or article.image %}
        <div style="flex: 0 0 auto; width: 60%; max-width: 350px; min-width: 250px; margin-right: 24px;">
          <div class="featured-blog-posts-card__image-wrapper" style="height: 220px; overflow: hidden;">
            {{ image }}
          </div>
        </div>
      {% endif %}

      <div class="featured-blog-posts-card__content" style="flex: 1; min-width: 0; display: block !important; visibility: visible !important; opacity: 1 !important; width: 40%;">
        <h4 style="display: block !important; font-size: 16px; line-height: 1.4; margin-bottom: 4px; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
          {{ title }}
        </h4>
        
        <div style="display: block !important; visibility: visible !important; opacity: 1 !important;">
          {{ details }}
        </div>
        
        <div style="display: block !important; visibility: visible !important; opacity: 1 !important; font-size: 14px; line-height: 1.5; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
          {{ description }}
        </div>
      </div>
    </div>
  {% else %}
    <!-- Vertical layout - trở về dạng mặc định -->
    <div class="featured-blog-posts-card__inner">
      {% if onboarding or article.image %}
        {{ image }}
      {% endif %}

      <div class="featured-blog-posts-card__content layout-panel-flex--column">
        <h4>{{ title }}</h4>
        {{ details }}
        {{ description }}
      </div>
    </div>
  {% endif %}
</div>

{% stylesheet %}
  .featured-blog-posts-card {
    text-align: var(--text-align);
  }

  .featured-blog-posts-card__inner {
    gap: var(--gap);
  }

  /* Các style cho layout Vertical mặc định */
  .featured-blog-posts-card:not(.featured-blog-posts-card--horizontal) .featured-blog-posts-card__inner {
    display: block;
  }

  /* Các style cho layout Horizontal */
  .featured-blog-posts-card--horizontal.featured-blog-posts-card--wide-image .featured-blog-posts-card__inner {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    width: 100%;
  }

  .featured-blog-posts-card--horizontal.featured-blog-posts-card--wide-image .featured-blog-posts-card__inner > div:first-child {
    width: 60%;
    min-width: 250px;
    max-width: 350px;
    flex-shrink: 0;
    margin-right: 24px;
  }

  .featured-blog-posts-card--horizontal.featured-blog-posts-card--wide-image .featured-blog-posts-card__content {
    width: 40%;
    flex: 1;
    min-width: 0;
  }

  /* Tỷ lệ hình ảnh cho Horizontal layout - TĂNG CHIỀU CAO */
  .featured-blog-posts-card--horizontal.featured-blog-posts-card--wide-image 
  .featured-blog-posts-card__image {
    aspect-ratio: 4/3; /* Thay đổi từ 5/3 thành 4/3 để cao hơn */
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-blog-posts-card__image-wrapper {
    height: 220px;
    overflow: hidden;
    position: relative;
  }

  .featured-blog-posts-card__image-wrapper .featured-blog-posts-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .resource-list--grid .resource-list__item {
    min-width: 0;
  }

  /* Editorial layout */
  .resource-list:not(.hidden--desktop) .blog-post-card--flexible-aspect-ratio {
    .featured-blog-posts-card__content {
      --flex-wrap: nowrap;
    }
  }

  @media (min-width: 769px) {
    /* Tăng height thêm cho desktop */
    .featured-blog-posts-card__image-wrapper {
      height: 250px; /* Tăng lên 250px cho desktop */
    }
    
    .featured-blog-posts-card--horizontal.featured-blog-posts-card--wide-image 
    .featured-blog-posts-card__image {
      aspect-ratio: 4/3;
    }
  }

  @media (min-width: 1024px) {
    /* Tăng height thêm cho màn hình lớn */
    .featured-blog-posts-card__image-wrapper {
      height: 280px; /* Tăng lên 280px cho màn hình lớn */
    }
    
    .featured-blog-posts-card--horizontal.featured-blog-posts-card--wide-image 
    .featured-blog-posts-card__image {
      aspect-ratio: 4/3;
    }
  }

  @media (max-width: 768px) {
    /* Responsive cho horizontal layout */
    .featured-blog-posts-card--horizontal .featured-blog-posts-card__inner {
      flex-direction: column !important;
    }
    
    .featured-blog-posts-card--horizontal .featured-blog-posts-card__inner > div:first-child {
      width: 100% !important;
      max-width: 100% !important;
      margin-right: 0 !important;
      margin-bottom: 16px !important;
    }
    
    .featured-blog-posts-card--horizontal .featured-blog-posts-card__content {
      width: 100% !important;
    }
    
    /* Giữ height cho mobile */
    .featured-blog-posts-card__image-wrapper {
      height: 200px; /* Giữ height cho mobile */
    }
    
    /* Điều chỉnh aspect ratio cho mobile */
    .featured-blog-posts-card--horizontal.featured-blog-posts-card--wide-image 
    .featured-blog-posts-card__image {
      aspect-ratio: 16/9; /* Tỷ lệ rộng hơn cho mobile */
    }
  }

  .featured-blog-posts-card__inner a,
  .featured-blog-posts-card__inner button {
    pointer-events: auto;
  }

  /* allow all blocks to be selectable in editor preview */
  .shopify-design-mode .featured-blog-posts-card__content * {
    pointer-events: auto;
  }

  .featured-blog-posts-card__content {
    --flex-wrap: wrap;
  }

  .featured-blog-posts-card__content h4 {
    margin: 0;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:names.blog_card",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "t:content.layout"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "t:settings.layout",
      "options": [
        {
          "value": "vertical",
          "label": "t:options.vertical"
        },
        {
          "value": "horizontal",
          "label": "t:options.horizontal"
        }
      ],
      "default": "vertical"
    },
    {
      "type": "header",
      "content": "t:content.text"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "t:settings.alignment",
      "options": [
        {
          "value": "left",
          "label": "t:options.left"
        },
        {
          "value": "center",
          "label": "t:options.center"
        },
        {
          "value": "right",
          "label": "t:options.right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:settings.vertical_gap",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 8
    },
    {
      "type": "header",
      "content": "t:content.appearance"
    },
    {
      "type": "checkbox",
      "id": "inherit_color_scheme",
      "label": "t:settings.inherit_color_scheme",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1",
      "visible_if": "{{ block.settings.inherit_color_scheme == false }}"
    },
    {
      "type": "select",
      "id": "border",
      "label": "t:settings.borders",
      "options": [
        {
          "value": "none",
          "label": "t:options.none"
        },
        {
          "value": "solid",
          "label": "t:options.solid"
        }
      ],
      "default": "none"
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 0,
      "max": 10,
      "step": 0.5,
      "unit": "px",
      "label": "t:settings.border_width",
      "default": 1,
      "visible_if": "{{ block.settings.border != 'none' }}"
    },
    {
      "type": "range",
      "id": "border_opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "t:settings.opacity",
      "default": 100,
      "visible_if": "{{ block.settings.border != 'none' }}"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "t:settings.border_radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "t:settings.left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "t:settings.right",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ]
} 
{% endschema %}