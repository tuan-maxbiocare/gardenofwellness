<script>
  (() => {
    const items = [];
    let originalTotal = 0;

    const totalEl = document.querySelector('.bundle-total-price');
    const saveRow = document.querySelector('.bundle-save-row');
    const saveAmountEl = document.querySelector('.bundle-save-amount');
    const remainingEl = document.querySelector('.bundle-remaining');
    const discountEl = document.querySelector('.bundle-current-discount');
    const defaultHint = document.querySelector('.bundle-hint-default');
    const congratsHint = document.querySelector('.bundle-hint-congrats');
    const addAllBtn = document.querySelector('.add-all-to-cart');
    const dots = document.querySelectorAll('.progress-dot');
    const lineActive = document.querySelector('.progress-line-active');
    const panels = document.querySelectorAll('.bundle-panel');
    const stepContents = document.querySelectorAll('.step-content');
    const tabs = Array.from(document.querySelectorAll('.bundle-tab'));

    // ==============================================
    // STICKY TABS với HEADER COORDINATION
    // ==============================================
    function initStickyTabsWithHeader() {
      const header = document.querySelector('header-component');
      const tabsStickyContainer = document.querySelector('.bundle-tabs-sticky-container');
      const bundleWrapper = document.querySelector('.bundle-sticky-wrapper');
      
      if (!header || !tabsStickyContainer) return;
      
      function updateTabsPosition() {
        const headerHeight = header.offsetHeight;
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        const headerState = header.dataset.scrollDirection || 'none';
        
        // Kiểm tra xem header có đang hiện không
        const isHeaderVisible = headerState === 'up' || headerState === 'none';
        
        // Tính toán vị trí của bundle section
        const bundleRect = bundleWrapper.getBoundingClientRect();
        const bundleTopFromViewport = bundleRect.top + scrollTop;
        
        // Nếu đã scroll qua phần đầu của section
        if (scrollTop >= bundleTopFromViewport) {
          // Section đã vào viewport
          if (isHeaderVisible) {
            // Header đang hiện: tabs ở dưới header
            tabsStickyContainer.style.top = `${headerHeight}px`;
          } else {
            // Header đang ẩn: tabs ở top viewport
            tabsStickyContainer.style.top = '0px';
          }
        } else {
          // Chưa scroll đến section: reset
          tabsStickyContainer.style.top = '0px';
        }
      }
      
      // Debounce function
      function debounce(func, wait) {
        let timeout;
        return function executedFunction(...args) {
          const later = () => {
            clearTimeout(timeout);
            func(...args);
          };
          clearTimeout(timeout);
          timeout = setTimeout(later, wait);
        };
      }
      
      const debouncedUpdate = debounce(updateTabsPosition, 10);
      
      // Event listeners
      window.addEventListener('scroll', debouncedUpdate);
      window.addEventListener('resize', debouncedUpdate);
      
      // Theo dõi thay đổi của header
      if (header) {
        const observer = new MutationObserver(debouncedUpdate);
        observer.observe(header, { 
          attributes: true, 
          attributeFilter: ['data-scroll-direction', 'data-sticky-state'] 
        });
      }
      
      // Initial call
      updateTabsPosition();
    }

    // ==============================================
    // MOBILE SUMMARY STICKY BAR
    // ==============================================
    function initMobileSummaryBar() {
      const mobileSummaryBar = document.querySelector('.mobile-summary-bar');
      const mobileStickyWrapper = document.querySelector('.mobile-summary-sticky-wrapper');
      const bundleWrapper = document.querySelector('.bundle-sticky-wrapper');
      
      if (!mobileSummaryBar || !mobileStickyWrapper || window.innerWidth > 768) {
        return;
      }
      
      // Elements
      const expandedView = mobileSummaryBar.querySelector('.mobile-summary-expanded');
      const collapsedView = mobileSummaryBar.querySelector('.mobile-summary-collapsed');
      const toggleBtn = mobileSummaryBar.querySelector('.mobile-summary-toggle');
      const toggleIconCollapse = mobileSummaryBar.querySelector('.toggle-icon-collapse');
      const toggleIconExpand = mobileSummaryBar.querySelector('.toggle-icon-expand');
      const mobileAddAllBtn = mobileSummaryBar.querySelector('.mobile-add-all-btn');
      const collapsedAddBtn = mobileSummaryBar.querySelector('.collapsed-add-btn');
      
      let isCollapsed = false;
      
      // Update mobile summary data
      function updateMobileSummary() {
        // Update remaining count
        const remainingEl = mobileSummaryBar.querySelector('.mobile-remaining-count');
        const discountEl = mobileSummaryBar.querySelector('.mobile-current-discount');
        if (remainingEl && discountEl) {
          remainingEl.textContent = document.querySelector('.bundle-remaining')?.textContent || '5';
          discountEl.textContent = document.querySelector('.bundle-current-discount')?.textContent || '5%';
        }
        
        // Update progress dots
        const totalCount = items.reduce((sum, item) => sum + item.quantity, 0);
        mobileSummaryBar.querySelectorAll('.mobile-progress-dot').forEach(dot => {
          const threshold = parseInt(dot.dataset.threshold);
          dot.classList.toggle('active', totalCount >= threshold);
        });
        
        // Update step counts
        const counts = [0, 0, 0];
        items.forEach(i => counts[i.step - 1] += i.quantity);
        
        mobileSummaryBar.querySelectorAll('.step-1-mobile').forEach(el => el.textContent = counts[0]);
        mobileSummaryBar.querySelectorAll('.step-2-mobile').forEach(el => el.textContent = counts[1]);
        mobileSummaryBar.querySelectorAll('.step-3-mobile').forEach(el => el.textContent = counts[2]);
        
        // Update prices
        const totalPrice = document.querySelector('.bundle-total-price')?.textContent || '$0.00';
        const saveAmount = document.querySelector('.bundle-save-amount')?.textContent;
        
        mobileSummaryBar.querySelectorAll('.mobile-total-price, .collapsed-price').forEach(el => {
          el.textContent = totalPrice;
        });
        
        const mobileSaveRow = mobileSummaryBar.querySelector('.mobile-save-row');
        if (mobileSaveRow && saveAmount && saveAmount !== '$0.00') {
          mobileSaveRow.style.display = 'flex';
          mobileSaveRow.querySelector('.mobile-save-amount').textContent = saveAmount;
        } else if (mobileSaveRow) {
          mobileSaveRow.style.display = 'none';
        }
        
        // Update button state
        const isDisabled = items.length === 0;
        if (mobileAddAllBtn) {
          mobileAddAllBtn.disabled = isDisabled;
          mobileAddAllBtn.style.opacity = isDisabled ? '0.5' : '1';
        }
        if (collapsedAddBtn) {
          collapsedAddBtn.disabled = isDisabled;
          collapsedAddBtn.style.opacity = isDisabled ? '0.5' : '1';
        }
      }
      
      // Toggle between expanded and collapsed view
      function toggleView() {
        isCollapsed = !isCollapsed;
        
        if (isCollapsed) {
          expandedView.style.display = 'none';
          collapsedView.style.display = 'block';
          toggleIconCollapse.style.display = 'none';
          toggleIconExpand.style.display = 'block';
          mobileSummaryBar.style.padding = '12px 16px';
        } else {
          expandedView.style.display = 'block';
          collapsedView.style.display = 'none';
          toggleIconCollapse.style.display = 'block';
          toggleIconExpand.style.display = 'none';
          mobileSummaryBar.style.padding = '16px';
        }
      }
      
      // Update sticky wrapper position (giống như tabs)
      function updateMobileSummaryPosition() {
        const header = document.querySelector('header-component');
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        
        if (!header || !bundleWrapper) return;
        
        const bundleRect = bundleWrapper.getBoundingClientRect();
        const bundleTopFromViewport = bundleRect.top + scrollTop;
        const bundleBottomFromViewport = bundleRect.bottom + scrollTop;
        
        // Kiểm tra nếu section đã scroll vào viewport
        if (scrollTop >= bundleTopFromViewport && scrollTop <= bundleBottomFromViewport - window.innerHeight) {
          // Section đang trong viewport - hiển thị sticky bar
          mobileStickyWrapper.style.display = 'block';
          
          // Tính toán nếu cần điều chỉnh vị trí khi có header
          const headerState = header.dataset.scrollDirection || 'none';
          if (headerState === 'down') {
            // Header đang ẩn - không cần điều chỉnh
            mobileStickyWrapper.style.bottom = '0';
          } else {
            // Header đang hiện - đảm bảo không bị che
            mobileStickyWrapper.style.bottom = '0';
          }
        } else {
          // Section không trong viewport - ẩn sticky bar
          mobileStickyWrapper.style.display = 'none';
        }
      }
      
      // Add to cart từ mobile buttons
      function handleMobileAddToCart() {
        if (items.length === 0) return;
        fetch('/cart/add.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ items: items.map(i => ({ id: i.id, quantity: i.quantity })) })
        }).then(() => location.href = '/cart');
      }
      
      if (mobileAddAllBtn) {
        mobileAddAllBtn.addEventListener('click', handleMobileAddToCart);
      }
      
      if (collapsedAddBtn) {
        collapsedAddBtn.addEventListener('click', handleMobileAddToCart);
      }
      
      // Event listeners
      if (toggleBtn) {
        toggleBtn.addEventListener('click', toggleView);
      }
      
      window.addEventListener('scroll', updateMobileSummaryPosition);
      window.addEventListener('resize', updateMobileSummaryPosition);
      
      // Initial setup
      updateMobileSummary();
      updateMobileSummaryPosition();
      
      // Update mobile summary khi bundle thay đổi
      const originalUpdateUI = updateUI;
      updateUI = function() {
        originalUpdateUI();
        updateMobileSummary();
      };
    }

    // ==============================================
    // ORIGINAL BUNDLE FUNCTIONALITY
    // ==============================================
    function updateAddButtonsState() {
      const step2Qty = items.filter(i => i.step === 2).reduce((sum, i) => sum + i.quantity, 0);
      document.querySelectorAll('.add-to-bundle').forEach(btn => {
        const panel = btn.closest('.bundle-panel');
        if (!panel) return;
        const step = Array.from(panels).indexOf(panel) + 1;
        if (step === 2 && step2Qty >= 3) {
          btn.disabled = true;
          btn.style.opacity = '0.5';
          btn.style.cursor = 'not-allowed';
        } else {
          btn.disabled = false;
          btn.style.opacity = '1';
          btn.style.cursor = 'pointer';
        }
      });
    }

    function renderStepContents() {
      stepContents.forEach(c => c.innerHTML = '');
      items.forEach(item => {
        const content = stepContents[item.step - 1];
        if (!content) return;
        content.insertAdjacentHTML('beforeend', `
          <div class="step-item" data-variant-id="${item.id}">
            <div class="step-item-img"><img src="${item.img}" alt="${item.title}"></div>
            <div class="step-item-info">
              <div class="step-item-title">${item.title}</div>
              <div class="step-item-quantity">Qty: ${item.quantity}</div>
              <div class="step-item-price">$${(item.price * item.quantity).toFixed(2)}</div>
            </div>
          </div>
        `);
      });
    }

    function updateUI() {
      const counts = [0,0,0];
      items.forEach(i => counts[i.step - 1] += i.quantity);
      const totalCount = counts.reduce((a,b) => a + b, 0);

      document.querySelector('.step-1').textContent = `${counts[0]} item(s) added`;
      document.querySelector('.step-2').textContent = `${counts[1]} item(s) added`;
      document.querySelector('.step-3').textContent = `${counts[2]} item(s) added`;

      let discount = 0;
      if (totalCount >= 10) discount = 15;
      else if (totalCount >= 8) discount = 10;
      else if (totalCount >= 5) discount = 5;

      discountEl.textContent = discount + '%';

      dots.forEach(dot => {
        const t = Number(dot.dataset.threshold);
        dot.classList.toggle('active', totalCount >= t);
      });

      lineActive.style.width = totalCount >= 10 ? '100%' : totalCount >= 8 ? '66%' : totalCount >= 5 ? '33%' : '0%';

      if (totalCount >= 10) {
        defaultHint.style.display = 'none';
        congratsHint.style.display = 'block';
      } else {
        defaultHint.style.display = 'block';
        congratsHint.style.display = 'none';
        const next = totalCount < 5 ? 5 : totalCount < 8 ? 8 : 10;
        remainingEl.textContent = next - totalCount;
      }

      const saved = (originalTotal * discount / 100).toFixed(2);
      if (discount > 0 && originalTotal > 0) {
        saveAmountEl.textContent = '$' + saved;
        saveRow.style.display = 'flex';
      } else {
        saveRow.style.display = 'none';
      }

      totalEl.textContent = '$' + (originalTotal - parseFloat(saved || 0)).toFixed(2);
      addAllBtn.disabled = totalCount === 0;
    }

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const id = tab.dataset.tab;
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        panels.forEach(p => p.classList.remove('active'));
        document.querySelector(`[data-panel="${id}"]`)?.classList.add('active');
        updateAddButtonsState();
      });
    });

    document.querySelectorAll('.add-to-bundle').forEach(btn => {
      btn.addEventListener('click', () => {
        const panel = btn.closest('.bundle-panel');
        const step = Array.from(panels).indexOf(panel) + 1;
        const currentQty = items.filter(i => i.step === step).reduce((s, i) => s + i.quantity, 0);
        if (step === 2 && currentQty >= 3) return;

        const variantId = btn.dataset.variantId;
        const price = parseFloat(btn.dataset.price);
        const img = btn.closest('.bundle-item-new').querySelector('.product-card__image')?.src || '';
        const title = btn.closest('.bundle-item-new').querySelector('.product-card__title').textContent.trim();

        const existing = items.find(i => i.id === variantId && i.step === step);
        if (existing) {
          existing.quantity += 1;
        } else {
          items.push({ id: variantId, price, quantity: 1, img, title, step });
          btn.textContent = 'ADDED ✓';
        }

        originalTotal += price;
        renderStepContents();
        updateUI();
        updateAddButtonsState();
      });
    });

    document.querySelectorAll('.step-header').forEach(h => {
      h.addEventListener('click', () => h.closest('.bundle-step').classList.toggle('active'));
    });

    addAllBtn.addEventListener('click', () => {
      if (items.length === 0) return;
      fetch('/cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ items: items.map(i => ({ id: i.id, quantity: i.quantity })) })
      }).then(() => location.href = '/cart');
    });

    const prev = document.querySelector('.tab-arrow.prev');
    const next = document.querySelector('.tab-arrow.next');
    if (prev && next) {
      prev.addEventListener('click', () => {
        const idx = tabs.findIndex(t => t.classList.contains('active'));
        tabs[idx <= 0 ? tabs.length - 1 : idx - 1].click();
      });
      next.addEventListener('click', () => {
        const idx = tabs.findIndex(t => t.classList.contains('active'));
        tabs[idx >= tabs.length - 1 ? 0 : idx + 1].click();
      });
    }

    // Initialize everything
    renderStepContents();
    updateUI();
    updateAddButtonsState();
    
    // Initialize sticky tabs
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => {
        initStickyTabsWithHeader();
        initMobileSummaryBar();
      });
    } else {
      initStickyTabsWithHeader();
      initMobileSummaryBar();
    }
  })();
</script>

