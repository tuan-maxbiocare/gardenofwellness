<script>
(function () {
  class TestimonialCarousel {
    constructor(element) {
      this.carousel = element;
      this.container = this.carousel.querySelector('.slides-wrapper-{{ section.id }}');
      this.slides = this.carousel.querySelectorAll('.testimonial-slide-{{ section.id }}');
      this.totalSlides = {{ section.blocks.size | default: 0 }};

      if (this.totalSlides === 0) return;

      this.slidesPerView = window.innerWidth >= 768 ? 2 : 1;

      /* ==== LOOP ==== */
      this.setupInfiniteLoop();

      this.currentIndex = 1;

      /* ==== DRAG ==== */
      this.isDragging = false;
      this.startX = 0;
      this.currentTranslate = 0;
      this.prevTranslate = 0;

      /* ==== AUTO ==== */
      this.autoSlideInterval = null;
      this.autoSlideSpeed = {{ section.settings.auto_slide_speed | times: 1000 }};
      this.isAutoSlideEnabled = {{ section.settings.enable_auto_slide | json }};

      this.init();
      this.setupResizeListener();
      this.setupTouchEvents();

      /* ==== TAB VISIBILITY FIX ==== */
      document.addEventListener(
        'visibilitychange',
        this.handleVisibilityChange.bind(this)
      );
    }

    /* ================= LOOP ================= */
    setupInfiniteLoop() {
      const first = this.slides[0].cloneNode(true);
      const last = this.slides[this.slides.length - 1].cloneNode(true);

      this.container.insertBefore(last, this.slides[0]);
      this.container.appendChild(first);

      this.slides = this.carousel.querySelectorAll('.testimonial-slide-{{ section.id }}');
    }

    getSlideWidth() {
      return 100 / this.slidesPerView;
    }

    /* ================= INIT ================= */
    init() {
      this.updatePosition(true);
      this.updateCounter();

      const prev = document.querySelector('.prev-arrow-{{ section.id }}');
      const next = document.querySelector('.next-arrow-{{ section.id }}');

      if (prev) prev.addEventListener('click', () => this.prev());
      if (next) next.addEventListener('click', () => this.next());

      if (this.isAutoSlideEnabled && this.totalSlides > 1) {
        this.startAutoSlide();
        this.carousel.addEventListener('mouseenter', () => this.stopAutoSlide());
        this.carousel.addEventListener('mouseleave', () => this.startAutoSlide());
      }
    }

    /* ================= POSITION ================= */
    updatePosition(instant = false) {
      this.container.style.transition = instant
        ? 'none'
        : 'transform 0.5s cubic-bezier(0.4, 0, 0.2, 1)';

      this.container.style.transform =
        `translateX(${-(this.currentIndex * this.getSlideWidth())}%)`;

      this.updateCounter();
    }

    /* ================= NEXT / PREV (SMOOTH LOOP) ================= */
    next() {
      this.currentIndex++;
      this.updatePosition();

      this.container.addEventListener(
        'transitionend',
        () => {
          if (this.currentIndex === this.totalSlides + 1) {
            this.container.style.transition = 'none';
            this.currentIndex = 1;
            this.updatePosition(true);
          }
        },
        { once: true }
      );

      this.restartAutoSlide();
    }

    prev() {
      this.currentIndex--;
      this.updatePosition();

      this.container.addEventListener(
        'transitionend',
        () => {
          if (this.currentIndex === 0) {
            this.container.style.transition = 'none';
            this.currentIndex = this.totalSlides;
            this.updatePosition(true);
          }
        },
        { once: true }
      );

      this.restartAutoSlide();
    }

    /* ================= COUNTER ================= */
    updateCounter() {
      let real = this.currentIndex;
      if (real > this.totalSlides) real = 1;
      if (real < 1) real = this.totalSlides;

      const cur = document.querySelector('.current-slide-{{ section.id }}');
      const total = document.querySelector('.total-slides-{{ section.id }}');

      if (cur) cur.textContent = real;
      if (total) total.textContent = this.totalSlides;
    }

    /* ================= DRAG ================= */
    setupTouchEvents() {
      this.container.addEventListener('touchstart', this.touchStart.bind(this), { passive: false });
      this.container.addEventListener('touchmove', this.touchMove.bind(this), { passive: false });
      this.container.addEventListener('touchend', this.touchEnd.bind(this));

      this.container.addEventListener('mousedown', this.touchStart.bind(this));
      this.container.addEventListener('mousemove', this.touchMove.bind(this));
      this.container.addEventListener('mouseup', this.touchEnd.bind(this));
      this.container.addEventListener('mouseleave', this.touchEnd.bind(this));

      this.container.addEventListener('dragstart', e => e.preventDefault());
    }

    touchStart(e) {
      this.isDragging = true;
      this.startX = e.type.includes('mouse') ? e.pageX : e.touches[0].clientX;
      this.prevTranslate = -(this.currentIndex * this.getSlideWidth());
      this.container.style.transition = 'none';
    }

    touchMove(e) {
      if (!this.isDragging) return;
      e.preventDefault();

      const currentX = e.type.includes('mouse') ? e.pageX : e.touches[0].clientX;
      const diff = currentX - this.startX;
      const slideWidth = this.container.clientWidth / this.slidesPerView;

      this.currentTranslate = this.prevTranslate + (diff / slideWidth) * 100;
      this.container.style.transform = `translateX(${this.currentTranslate}%)`;
    }

    touchEnd() {
      if (!this.isDragging) return;
      this.isDragging = false;

      const moved = this.currentTranslate / this.getSlideWidth();
      if (Math.abs(moved) > 0.25) {
        this.currentIndex -= Math.round(moved);
      }

      this.currentTranslate = 0;
      this.prevTranslate = 0;

      this.updatePosition();
      this.restartAutoSlide();
    }

    /* ================= RESIZE ================= */
    setupResizeListener() {
      window.addEventListener('resize', () => {
        const view = window.innerWidth >= 768 ? 2 : 1;
        if (view !== this.slidesPerView) {
          this.slidesPerView = view;
          this.updatePosition(true);
        }
      });
    }

    /* ================= TAB VISIBILITY ================= */
    handleVisibilityChange() {
      if (document.hidden) {
        this.stopAutoSlide();
        this.isDragging = false;
      } else {
        this.container.style.transition = 'none';
        this.updatePosition(true);

        if (this.isAutoSlideEnabled) {
          this.startAutoSlide();
        }
      }
    }

    /* ================= AUTO ================= */
    startAutoSlide() {
      this.stopAutoSlide();
      this.autoSlideInterval = setInterval(() => this.next(), this.autoSlideSpeed);
    }

    stopAutoSlide() {
      if (this.autoSlideInterval) {
        clearInterval(this.autoSlideInterval);
        this.autoSlideInterval = null;
      }
    }

    restartAutoSlide() {
      if (!this.isAutoSlideEnabled) return;
      this.stopAutoSlide();
      this.startAutoSlide();
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const el = document.querySelector('.carousel-wrapper-{{ section.id }}');
    if (el) new TestimonialCarousel(el);
  });

  if (window.Shopify && window.Shopify.designMode) {
    document.addEventListener('shopify:section:load', e => {
      const el = e.target.querySelector('.carousel-wrapper-{{ section.id }}');
      if (el) new TestimonialCarousel(el);
    });
  }
})();
</script>

