<div class="testimonial-section-{{ section.id }}" style="background-color: {{ section.settings.background_color }}">
  <div class="testimonial-container-{{ section.id }}">

    <!-- Header -->
    <div class="header-row-{{ section.id }}">
      <h2 class="section-heading-{{ section.id }}" style="color: {{ section.settings.heading_color }}">
        {%- if section.settings.heading != blank -%}
          {{ section.settings.heading }}
        {%- else -%}
          Customers <em>love</em> us.
        {%- endif -%}
      </h2>

      <div class="nav-container-{{ section.id }}">
        <span class="slide-counter-{{ section.id }}" style="color: {{ section.settings.text_color }}">
          <span class="current-slide-{{ section.id }}">1</span> / <span class="total-slides-{{ section.id }}">{{ section.blocks.size }}</span>
        </span>

        <div style="display: flex; gap: 8px;">
          <div class="arrow-btn-{{ section.id }} prev-arrow-{{ section.id }}" style="border-color: {{ section.settings.arrow_color }}; color: {{ section.settings.arrow_color }}">
            <i class="ph ph-caret-left arrow-icon-{{ section.id }}"></i>
          </div>
          <div class="arrow-btn-{{ section.id }} next-arrow-{{ section.id }}" style="border-color: {{ section.settings.arrow_color }}; color: {{ section.settings.arrow_color }}">
            <i class="ph ph-caret-right arrow-icon-{{ section.id }}"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Carousel -->
    {%- if section.blocks.size > 0 -%}
      <div class="carousel-wrapper-{{ section.id }}">
        <div class="slides-wrapper-{{ section.id }}">
          {%- for block in section.blocks -%}
            <div class="testimonial-slide-{{ section.id }}" data-slide="{{ forloop.index }}" {{ block.shopify_attributes }}>
              <div class="testimonial-grid-{{ section.id }}">

                <!-- Left - Image -->
                <div class="lifestyle-image-wrapper-{{ section.id }}">
                  {%- if block.settings.image != blank -%}
                    {%- assign lifestyle_class = 'lifestyle-image-' | append: section.id -%}
                    {{ block.settings.image | image_url: width: 800 | image_tag:
                      loading: 'lazy',
                      class: lifestyle_class,
                      sizes: '(max-width: 768px) 100vw, 50vw'
                    }}
                  {%- else -%}
                    {%- assign lifestyle_class = 'lifestyle-image-' | append: section.id -%}
                    {{ 'lifestyle-1' | placeholder_svg_tag: lifestyle_class }}
                  {%- endif -%}
                </div>

                <!-- Right - Content -->
                <div class="content-column-{{ section.id }}">
                  <div>
                    <div class="customer-info-{{ section.id }}">
                      <div class="avatar-wrapper-{{ section.id }}">
                        {%- if block.settings.customer_avatar != blank -%}
                          {%- assign avatar_class = 'avatar-img-' | append: section.id -%}
                          {{ block.settings.customer_avatar | image_url: width: 100 | image_tag:
                            loading: 'lazy',
                            class: avatar_class
                          }}
                        {%- else -%}
                          {%- assign avatar_class = 'avatar-img-' | append: section.id -%}
                          {{ 'image' | placeholder_svg_tag: avatar_class }}
                        {%- endif -%}
                      </div>
                      <div>
                        <h3 class="customer-name-{{ section.id }}" style="color: {{ section.settings.text_color }}">
                          {{ block.settings.customer_name }}
                        </h3>
                        <span class="verified-badge-{{ section.id }}">
                          <i class="ph ph-check-circle"></i>
                          Verified Customer
                        </span>
                      </div>
                    </div>

                    <div class="star-rating-{{ section.id }}">
                      {%- for i in (1..5) -%}
                        {%- assign star_class = 'star-icon-' | append: section.id -%}
                        <i class="ph-fill ph-star {{ star_class }}" style="color: {{ section.settings.star_color }};"></i>
                      {%- endfor -%}
                    </div>

                    {%- if block.settings.testimonial_title != blank -%}
                      <h4 class="testimonial-title-{{ section.id }}" style="color: {{ section.settings.text_color }}">
                        {{ block.settings.testimonial_title }}
                      </h4>
                    {%- endif -%}

                    {%- if block.settings.testimonial_text != blank -%}
                      <p class="testimonial-text-{{ section.id }}" style="color: {{ section.settings.text_color }};">
                        {{ block.settings.testimonial_text }}
                      </p>
                    {%- endif -%}
                  </div>

                  {%- if block.settings.featured_product != blank -%}
                    {%- assign product = block.settings.featured_product -%}
                    <a href="{{ product.url }}" class="product-card-{{ section.id }}" style="color: inherit; text-decoration: none;">
                      <div class="product-row-{{ section.id }}">
                        <div class="product-image-wrapper-{{ section.id }}">
                          {%- if product.featured_image != blank -%}
                            {%- assign product_img_class = 'product-img-' | append: section.id -%}
                            {{ product.featured_image | image_url: width: 200 | image_tag:
                              loading: 'lazy',
                              class: product_img_class
                            }}
                          {%- else -%}
                            {%- assign product_img_class = 'product-img-' | append: section.id -%}
                            {{ 'product-1' | placeholder_svg_tag: product_img_class }}
                          {%- endif -%}
                        </div>

                        <div class="product-info-{{ section.id }}">
                          <p class="product-name-{{ section.id }}">
                            {{ product.title }}
                          </p>

                          <div class="price-row-{{ section.id }}">
                            {%- if product.compare_at_price > product.price -%}
                              <span class="price-original-{{ section.id }}">
                                {{ product.compare_at_price | money }}
                              </span>
                            {%- endif -%}
                            <span class="price-current-{{ section.id }}">
                              {{ product.price | money }}
                            </span>
                          </div>
                        </div>
                      </div>
                    </a>
                  {%- endif -%}
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- else -%}
      <div class="empty-state-{{ section.id }}">
        <p>Add testimonial blocks to get started</p>
      </div>
    {%- endif -%}
  </div>
</div>

