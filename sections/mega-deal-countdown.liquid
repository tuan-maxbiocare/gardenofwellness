<style>
  .shopdev .mega-deal-hero {
    position: relative;
    width: 100%;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .shopdev .mega-deal-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background-color: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity }};
    z-index: 1;
  }

  .shopdev .mega-deal-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    text-align: center;
    padding: 40px 20px;
    max-width: 900px;
    width: 100%;
  }

  .shopdev .mega-deal-content h1 {
    color: {{ section.settings.text_color }};
    font-weight: 700;
    line-height: 1.1;
  }

  .shopdev .mega-deal-content p {
    color: {{ section.settings.text_color }};
  }

  .shopdev .countdown-timer {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    margin: 32px 0;
  }

  .shopdev .countdown-item {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    padding: 20px 24px;
    min-width: 100px;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .shopdev .countdown-number {
    font-size: 48px;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 8px;
    color: {{ section.settings.text_color }};
  }

  .shopdev .countdown-label {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: {{ section.settings.text_color }};
    opacity: 0.9;
  }

  .shopdev .mega-deal-button {
    display: inline-block;
    padding: 16px 48px;
    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 8px;
    transition: all 0.3s ease;
    text-decoration: none;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border: 2px solid {{ section.settings.button_border_color }};
    margin-top: 16px;
  }

  .shopdev .mega-deal-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  /* MOBILE OPTIMIZATION */
  @media (max-width: 1024px) {
    .shopdev .mega-deal-hero {
      min-height: 500px;
    }
    .shopdev .mega-deal-content {
      padding: 32px 16px;
    }
    .shopdev .mega-deal-content h1 {
      font-size: 3rem; /* giảm kích thước heading */
    }
    .shopdev .mega-deal-content p {
      font-size: 1.125rem; /* giảm kích thước subheading */
    }
    .shopdev .countdown-item {
      min-width: 80px;
      padding: 16px 20px;
    }
    .shopdev .countdown-number {
      font-size: 36px;
    }
    .shopdev .countdown-label {
      font-size: 12px;
    }
    .shopdev .mega-deal-button {
      padding: 12px 32px;
      font-size: 14px;
    }
  }

  @media (max-width: 768px) {
    .shopdev .mega-deal-hero {
      min-height: 450px;
    }
    .shopdev .mega-deal-content h1 {
      font-size: 2.25rem;
    }
    .shopdev .mega-deal-content p {
      font-size: 1rem;
    }
    .shopdev .countdown-number {
      font-size: 28px;
    }
    .shopdev .mega-deal-button {
      padding: 10px 24px;
      font-size: 13px;
    }
  }

  @media (max-width: 480px) {
  .shopdev .mega-deal-hero {
    min-height: 400px;
  }

  .shopdev .mega-deal-content h1 {
    font-size: 1.75rem;
  }

  .shopdev .mega-deal-content p {
    font-size: 0.875rem;
  }

  .shopdev .countdown-timer {
    gap: 8px;          /* giảm khoảng cách */
    flex-wrap: nowrap;  /* không xuống dòng */
    overflow-x: auto;   /* scroll nếu quá dài */
    justify-content: center;
  }

  .shopdev .countdown-item {
    min-width: 60px;
    padding: 10px 12px;
  }

  .shopdev .countdown-number {
    font-size: 20px;
  }

  .shopdev .countdown-label {
    font-size: 10px;
  }

  .shopdev .mega-deal-button {
    padding: 8px 20px;
    font-size: 12px;
  }
}

</style>

<div class="w-full">
  <div class="mega-deal-hero">
    {%- if section.settings.background_image != blank -%}
      {{ section.settings.background_image | image_url: width: 1920 | image_tag: 
        loading: 'lazy',
        class: 'absolute inset-0 w-full h-full object-cover',
        sizes: '100vw'
      }}
    {%- else -%}
      {{ 'lifestyle-2' | placeholder_svg_tag: 'absolute inset-0 w-full h-full object-cover bg-gray-800' }}
    {%- endif -%}

    <div class="mega-deal-content">
      {% if section.settings.heading != blank %}
        <h1>
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p>
          {{ section.settings.subheading }}
        </p>
      {% endif %}

      {% if section.settings.enable_countdown %}
        <div class="countdown-timer" data-end-date="{{ section.settings.countdown_end_date }}">
          <div class="countdown-item">
            <div class="countdown-number" data-days>00</div>
            <div class="countdown-label">Days</div>
          </div>
          <div class="countdown-item">
            <div class="countdown-number" data-hours>00</div>
            <div class="countdown-label">Hours</div>
          </div>
          <div class="countdown-item">
            <div class="countdown-number" data-minutes>00</div>
            <div class="countdown-label">Minutes</div>
          </div>
          <div class="countdown-item">
            <div class="countdown-number" data-seconds>00</div>
            <div class="countdown-label">Seconds</div>
          </div>
        </div>
      {% endif %}

      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="mega-deal-button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<script>
  class MegaDealCountdown {
    constructor(element) {
      this.element = element;
      this.endDate = new Date(element.dataset.endDate).getTime();
      this.daysEl = element.querySelector('[data-days]');
      this.hoursEl = element.querySelector('[data-hours]');
      this.minutesEl = element.querySelector('[data-minutes]');
      this.secondsEl = element.querySelector('[data-seconds]');
      
      if (this.endDate && !isNaN(this.endDate)) {
        this.init();
      }
    }

    init() {
      this.updateCountdown();
      this.interval = setInterval(() => this.updateCountdown(), 1000);
    }

    updateCountdown() {
      const now = new Date().getTime();
      const distance = this.endDate - now;

      if (distance < 0) {
        clearInterval(this.interval);
        this.daysEl.textContent = '00';
        this.hoursEl.textContent = '00';
        this.minutesEl.textContent = '00';
        this.secondsEl.textContent = '00';
        return;
      }

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      this.daysEl.textContent = String(days).padStart(2, '0');
      this.hoursEl.textContent = String(hours).padStart(2, '0');
      this.minutesEl.textContent = String(minutes).padStart(2, '0');
      this.secondsEl.textContent = String(seconds).padStart(2, '0');
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const countdownElements = document.querySelectorAll('.countdown-timer');
    countdownElements.forEach(element => {
      new MegaDealCountdown(element);
    });
  });

  if (window.Shopify && window.Shopify.designMode) {
    document.addEventListener('shopify:section:load', () => {
      const countdownElements = document.querySelectorAll('.countdown-timer');
      countdownElements.forEach(element => {
        new MegaDealCountdown(element);
      });
    });
  }
</script>

