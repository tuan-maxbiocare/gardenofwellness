{%- liquid
  assign tab_collections = section.settings.collection_list
  assign max_products = section.settings.max_products | default: 4
-%}


<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} spacing-style"
  style="
    {% render 'spacing-padding', settings: section.settings %};
    position: relative;
    background-color: {{ section.settings.section_bg }};
    {% if section.settings.background_image %}
      background-image: url('{{ section.settings.background_image | img_url: 'master' }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    {% endif %}
  "
>
  {% if section.settings.background_image %}
    <div class="section-overlay" style="background-color: {{ section.settings.background_overlay }};"></div>
  {% endif %}

  <div class="holiday-picks-section" style="position: relative; z-index: 2;">

    <!-- HEADER -->
    <div class="holiday-picks-header">
      <h2 class="holiday-picks-title" style="color: {{ section.settings.heading_color }};">
        {{ section.settings.heading | default: "Our holiday picks." }}
      </h2>

      {% if tab_collections != blank %}
        <div class="holiday-picks-tabs">
          {% for col in tab_collections %}
            <button
              class="holiday-picks-tab {% if forloop.first %}active{% endif %}"
              data-collection="{{ col.handle }}"
              style="
                color: {{ section.settings.tab_text_color }};
                border-color: {{ section.settings.tab_border_color }};
                {% if forloop.first %}
                  background: {{ section.settings.tab_active_bg }};
                  color: {{ section.settings.tab_active_text }};
                  border-color: {{ section.settings.tab_active_bg }};
                {% endif %}
              "
              onmouseover="if(!this.classList.contains('active')) { this.style.background='{{ section.settings.tab_hover_bg }}'; this.style.color='{{ section.settings.tab_hover_text }}'; }"
              onmouseout="if(!this.classList.contains('active')) { this.style.background='transparent'; this.style.color='{{ section.settings.tab_text_color }}'; }"
            >
              {% case forloop.index0 %}
                {% when 0 %}
                  {{ section.settings.tab_text_0 | default: col.title }}
                {% when 1 %}
                  {{ section.settings.tab_text_1 | default: col.title }}
                {% when 2 %}
                  {{ section.settings.tab_text_2 | default: col.title }}
                {% when 3 %}
                  {{ section.settings.tab_text_3 | default: col.title }}
                {% when 4 %}
                  {{ section.settings.tab_text_4 | default: col.title }}
                {% when 5 %}
                  {{ section.settings.tab_text_5 | default: col.title }}
                {% else %}
                  {{ col.title }}
              {% endcase %}
            </button>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <!-- TABS COLLECTION GRIDS -->
    {% for col in tab_collections %}
      <div
        class="holiday-picks-grid"
        data-collection="{{ col.handle }}"
        style="display:none"
      >
        {% for product in col.products limit: max_products %}
          <div class="holiday-product-card">
  <a href="{{ product.url }}" class="holiday-product-link">

    {% render 'product-badges', product: product %}


    <div class="holiday-product-image" style="background-color: {{ section.settings.product_image_bg }};">

      <!-- SEARCH ICON -->
      <span class="holiday-search-icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
          <circle cx="11" cy="11" r="7" stroke="currentColor" stroke-width="2"/>
          <line x1="20" y1="20" x2="16.5" y2="16.5" stroke="currentColor" stroke-width="2"/>
        </svg>
      </span>

      {% if product.featured_image %}
        <img
          src="{{ product.featured_image | img_url: '600x600' }}"
          alt="{{ product.title | escape }}"
          loading="lazy"
          class="holiday-product-img"
          width="auto"
          height="auto"
        >
      {% endif %}

      <button class="holiday-add-to-cart" style="background: {{ section.settings.atc_bg }}; color: {{ section.settings.atc_text }};">
        Add to cart
      </button>
    </div>

    <div class="holiday-product-info">
      <div class="holiday-cruelty-free" style="color: {{ section.settings.cruelty_text_color }};">
        <span class="holiday-cruelty-icon">✦</span> Cruelty-free
      </div>

      <h3 class="holiday-product-title" style="color: {{ section.settings.product_title_color }};">
        {{ product.title }}
      </h3>
    </div>
  </a>

  <!-- PRICE – TEXT ONLY (NOT CLICKABLE) -->
  <div class="holiday-product-price" style="color: {{ section.settings.price_regular_color }};">
    {% if product.compare_at_price > product.price %}
      <span class="holiday-price-compare">
        {{ product.compare_at_price | money }}
      </span>
      <span class="holiday-price-sale" style="color: {{ section.settings.price_sale_color }};">
        {{ product.price | money }}
      </span>
    {% else %}
      {{ product.price | money }}
    {% endif %}
  </div>
</div>

        {% endfor %}
      </div>
    {% endfor %}

    <!-- VIEW ALL -->
    {% if section.settings.show_view_all %}
      <div class="holiday-picks-footer">
        <a
          href="{{ section.settings.view_all_url | default: tab_collections[0].url }}"
          class="holiday-view-all-button"
          id="holidayViewAll"
          style="
            background: {{ section.settings.viewall_bg }};
            border-color: {{ section.settings.viewall_border }};
            color: {{ section.settings.viewall_border }};
          "
          onmouseover="this.style.background='{{ section.settings.viewall_hover_bg }}'"
          onmouseout="this.style.background='{{ section.settings.viewall_bg }}'"
        >
          {{ section.settings.view_all_text }}
        </a>
      </div>
    {% endif %}

  </div>
</div>

{% stylesheet %}
/* ==== CSS GIỮ NGUYÊN 100% – KHÔNG THAY ĐỔI GÌ ==== */
.holiday-picks-section {
  max-width: 1400px;
  margin: 0 auto;
  padding: 60px 20px;
  text-align: center;
}

.section-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
}

.holiday-picks-header {
  margin-bottom: 60px;
}

.holiday-picks-title {
  font-size: 3rem;
  font-weight: 400;
  margin-bottom: 24px;
}

.holiday-picks-tabs {
  display: flex;
  justify-content: center;
  gap: 12px;
  flex-wrap: wrap;
}

.holiday-picks-tab {
  padding: 10px 28px;
  border-radius: 50px;
  border: 1px solid rgba(0,0,0,0.15);
  background: transparent;
  font-weight: 500;
  cursor: pointer;
}

.holiday-picks-tab.active {
  background: black;
  color: white;
  border-color: black;
}

.holiday-picks-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
}

@media (max-width: 989px) {
  .holiday-picks-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* ===== MOBILE: SMALLER PRICE ONLY ===== */
@media (max-width: 749px) {
  .holiday-product-price {
    font-size: 1rem;
    margin: 12px 32px 32px;
  }

  .holiday-price-compare {
    font-size: 0.85rem;
  }

  .holiday-price-sale {
    font-size: 0.95rem;
  }
}


.holiday-product-card {
  position: relative;
  background: #f9f5f2;
  border-radius: 20px;
  transition: transform 0.3s ease;
}

.holiday-product-link {
  text-decoration: none;
  color: inherit;
}

.holiday-badge {
  position: absolute;
  top: 20px;
  left: 20px;
  padding: 6px 14px;
  border-radius: 50px;
  font-size: 0.8rem;
  background: #ff6b6b;
  color: white;
  opacity: 0;
  transform: translateY(-6px) scale(0.95);
  transition: opacity 0.25s ease, transform 0.25s ease;
  pointer-events: none;
}

.holiday-product-image {
  background: #f9f5f2;
  border-radius: 24px;
  padding: 32px;
  overflow: hidden;
  aspect-ratio: 3 / 4;
  display: flex;
  align-items: center;
  justify-content: center;
}

.holiday-product-img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  transition: transform 0.45s cubic-bezier(0.25, 0.8, 0.25, 1);
}
.holiday-product-card:hover .holiday-product-img {
  transform: scale(1.08);
}

.holiday-product-info {
  padding: 20px 0px 0px;
}

.holiday-product-title {
  font-size: 1.1rem;
  margin-bottom: 12px;
}

.holiday-product-price {
  font-size: 1.3rem;
  font-weight: 600;
}

.holiday-price-compare {
  text-decoration: line-through;
  opacity: 0.6;
  margin-right: 8px;
}

.holiday-price-sale {
  color: #ff6b6b;
}
.holiday-picks-footer {
  margin-top: 56px;
  text-align: center;
}

.holiday-view-all-button {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 9px 33px;
  font-size: 1rem;
  font-weight: 600;
  letter-spacing: 0.5px;
  border-radius: 999px;
  border: 2px solid #000;
  background: #fff;
  color: #000;
  text-decoration: none;
  transition: all 0.35s ease;
  position: relative;
  overflow: hidden;
}

.holiday-view-all-button:hover {
  background: transparent;
  color: #000;
}

.holiday-view-all-button::after {
  content: "→";
  font-size: 1.1rem;
  transform: translateX(-6px);
  opacity: 0;
  transition: all 0.3s ease;
}

.holiday-view-all-button:hover::after {
  transform: translateX(0);
  opacity: 1;
}

.holiday-picks-grid {
  opacity: 0;
  transform: translateY(28px);
  transition:
    opacity 0.55s cubic-bezier(0.25, 0.8, 0.25, 1),
    transform 0.55s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.holiday-picks-grid.active {
  opacity: 1;
  transform: translateY(0);
}
.holiday-product-card {
  position: relative;
  border-radius: 0;
  background: transparent;
}

.holiday-product-card:hover .holiday-badge {
  opacity: 1;
  transform: translateY(0) scale(1);
}
.holiday-product-card:hover .holiday-badge {
  box-shadow: 0 6px 18px rgba(255,107,107,0.45);
}
.holiday-add-to-cart {
  position: absolute;
  left: 50%;
  bottom: 18px;
  transform: translateX(-50%) translateY(30px);
  padding: 12px 36px;
  border-radius: 999px;
  border: none;
  background: #000;
  color: #fff;
  font-size: 0.95rem;
  font-weight: 600;
  cursor: pointer;
  opacity: 0;
  pointer-events: none;
  transition: 
    opacity 0.7s cubic-bezier(0.25, 0.8, 0.25, 1),
    transform 0.7s cubic-bezier(0.25, 0.8, 0.25, 1);
}
.holiday-product-image {
  position: relative;
  background: #f9f5f2;
  border-radius: 24px;
  padding: 32px;
  overflow: hidden;
  aspect-ratio: 3 / 4;
  display: flex;
  align-items: center;
  justify-content: center;
}

.holiday-product-image:hover .holiday-add-to-cart {
  opacity: 1;
  transform: translateX(-50%) translateY(-8px);
  pointer-events: auto;
}
/* SEARCH ICON */
.holiday-search-icon {
  position: absolute;
  top: 18px;
  right: 18px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: rgba(255,255,255,0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000;
  opacity: 0;
  transform: translateY(-6px);
  transition: all 0.35s ease;
  pointer-events: none;
}

.holiday-product-image:hover .holiday-search-icon {
  opacity: 1;
  transform: translateY(0);
}

/* ADD TO CART – NEAR FULL WIDTH */
.holiday-add-to-cart {
  width: calc(100% - 48px);
  left: 50%;
  bottom: 20px;
  transform: translateX(-50%) translateY(30px);
  padding: 14px 0;
  text-align: center;
}

/* PRICE TEXT ONLY */
.holiday-product-price {
  font-size: 1.3rem;
  font-weight: 600;
  margin: 12px 18px 18px;
  pointer-events: none;
}
.product-badges {
  position: absolute;
  top: 20px;
  left: 20px;
  display: flex;
  gap: 8px;
  z-index: 3;
}

.product-badge {
  padding: 6px 20px;
  border-radius: 999px;
  font-size: 0.75rem;
  font-weight: 600;
  letter-spacing: 0.4px;
  color: #fff;
  opacity: 0;
  transform: translateY(-6px) scale(0.95);
  transition: all 0.25s ease;
  pointer-events: none;
}

/* COLORS */
.badge-sale {
  background:rgb(238, 64, 64);
}

.badge-new {
  background: #3bb77e;
}

.badge-best {
  background: #111111;
}

/* HOVER SHOW */
.holiday-product-card:hover .product-badge {
  opacity: 1;
  transform: translateY(0) scale(1);
}

{% endstylesheet %}

<script>
document.addEventListener('DOMContentLoaded', () => {
  const tabs = document.querySelectorAll('.holiday-picks-tab');
  const grids = document.querySelectorAll('.holiday-picks-grid');
  const viewAll = document.getElementById('holidayViewAll');

  function showCollection(handle) {
    tabs.forEach(t => {
      t.classList.remove('active');
      t.style.background = 'transparent';
      t.style.color = '{{ section.settings.tab_text_color }}';
      t.style.borderColor = '{{ section.settings.tab_border_color }}';
    });

    const activeTab = document.querySelector(`.holiday-picks-tab[data-collection="${handle}"]`);
    if (activeTab) {
      activeTab.classList.add('active');
      activeTab.style.background = '{{ section.settings.tab_active_bg }}';
      activeTab.style.color = '{{ section.settings.tab_active_text }}';
      activeTab.style.borderColor = '{{ section.settings.tab_active_bg }}';
    }

    grids.forEach(g => {
      g.classList.remove('active');
      g.style.display = 'none';
    });

    const target = document.querySelector(`.holiday-picks-grid[data-collection="${handle}"]`);
    if (target) {
      target.style.display = 'grid';
      requestAnimationFrame(() => target.classList.add('active'));
    }

    {% for col in tab_collections %}
      if (handle === "{{ col.handle }}") {
        if (viewAll) viewAll.href = "{{ col.url }}";
      }
    {% endfor %}
  }

  const firstTab = document.querySelector('.holiday-picks-tab.active') || tabs[0];
  if (firstTab) showCollection(firstTab.dataset.collection);

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      showCollection(tab.dataset.collection);
    });
  });
});
</script>

