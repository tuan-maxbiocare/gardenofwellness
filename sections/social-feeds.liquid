<!-- JavaScript ho√†n thi·ªán cho section Social Feeds -->
<script>
// H√†m ƒë√≥ng popup - gi·ªØ nguy√™n
window.closeSocialPopup = function() {
  const popup = document.getElementById('social-popup-{{ section.id }}');
  if (popup) {
    popup.classList.remove('active');
    document.body.style.overflow = '';
  }
};

document.addEventListener('DOMContentLoaded', function() {
  console.log('Social Feeds section initialized');

  const popup = document.getElementById('social-popup-{{ section.id }}');
  const socialPosts = document.querySelectorAll('.social-post-item-{{ section.id }}');
  const grid = document.querySelector('.social-feeds-grid-{{ section.id }}');

  if (!popup) {
    console.error('Popup element not found');
    return;
  }

  if (socialPosts.length === 0) {
    console.warn('No social posts found');
  }

  let isMobile = window.innerWidth <= 767;

  // ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
  // Mobile-only: ch·ªâ swipe t·ª± nhi√™n + scroll-snap
  // Kh√¥ng d√πng arrow, counter, kh√¥ng can thi·ªáp scrollTo
  // ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
  function initMobileExperience() {
    if (!grid || !isMobile) return;

    // ƒê·∫£m b·∫£o c√°c thu·ªôc t√≠nh scroll-snap ƒë√£ ƒë∆∞·ª£c CSS x·ª≠ l√Ω
    // Ch√∫ng ta ch·ªâ th√™m ch√∫t m∆∞·ª£t m√† n·∫øu c·∫ßn (optional)

    let touchStartX = 0;
    let touchEndX = 0;

    grid.addEventListener('touchstart', e => {
      touchStartX = e.changedTouches[0].screenX;
    }, { passive: true });

    grid.addEventListener('touchend', e => {
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
    }, { passive: true });

    function handleSwipe() {
      const diff = touchStartX - touchEndX;
      // Ng∆∞·ª°ng swipe ~ 60px ƒë·ªÉ tr√°nh nh·∫ßm v·ªõi tap
      if (Math.abs(diff) < 60) return;

      if (diff > 0) {
        // Swipe left ‚Üí next
        grid.scrollBy({ left: grid.clientWidth, behavior: 'smooth' });
      } else {
        // Swipe right ‚Üí prev
        grid.scrollBy({ left: -grid.clientWidth, behavior: 'smooth' });
      }
    }

    // Optional: th√™m class ƒë·ªÉ CSS bi·∫øt ƒëang ·ªü ch·∫ø ƒë·ªô mobile carousel
    grid.classList.add('is-mobile-carousel');
  }

  // Kh·ªüi ƒë·ªông mobile n·∫øu ƒëang ·ªü mobile
  if (isMobile) {
    initMobileExperience();
  }

  // X·ª≠ l√Ω resize (chuy·ªÉn ƒë·ªïi gi·ªØa mobile ‚Üî desktop)
  let resizeTimer;
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimer);
    resizeTimer = setTimeout(() => {
      const nowMobile = window.innerWidth <= 767;

      if (nowMobile !== isMobile) {
        isMobile = nowMobile;

        if (isMobile) {
          initMobileExperience();
          // ƒê·∫£m b·∫£o scroll v·ªÅ ƒë·∫ßu n·∫øu c·∫ßn
          if (grid) grid.scrollLeft = 0;
        } else {
          // Desktop: reset scroll v·ªÅ 0
          if (grid) grid.scrollLeft = 0;
          grid?.classList.remove('is-mobile-carousel');
        }
      }
    }, 150);
  });

  // ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
  // Popup logic - gi·ªØ nguy√™n nh∆∞ng t·ªëi ∆∞u nh·∫π
  // ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
  function openSocialPopup(post) {
    const img = post.querySelector('.post-image-{{ section.id }}');
    const imgSrc = img?.currentSrc || img?.src || '';

    const avatarSrc = post.dataset.avatar || '';
    const username = post.dataset.username || '@yourbrand';
    let caption = post.dataset.caption || '';

    // Decode caption
    if (caption) {
      const textarea = document.createElement('textarea');
      textarea.innerHTML = caption;
      caption = textarea.value;
    } else {
      caption = 'Loving these products from our latest collection! üòç';
    }

    const hasProducts = post.dataset.hasProducts === 'true';

    // Media
    const popupMedia = popup.querySelector('.popup-media-{{ section.id }}');
    popupMedia.innerHTML = imgSrc
      ? `<img src="${imgSrc}" alt="Post" loading="lazy" style="width:100%;height:100%;object-fit:cover;border-radius:16px 16px 0 0;">`
      : `<div style="width:100%;height:100%;background:#f5f5f5;border-radius:16px 16px 0 0;display:flex;align-items:center;justify-content:center;color:#999;">No Image</div>`;

    // Avatar
    const popupAvatar = popup.querySelector('.popup-avatar-{{ section.id }}');
    popupAvatar.innerHTML = avatarSrc
      ? `<img src="${avatarSrc}" alt="${username}" class="popup-avatar-img-{{ section.id }}" style="width:100%;height:100%;object-fit:cover;">`
      : `<div style="width:100%;height:100%;background:#f5f5f5;display:flex;align-items:center;justify-content:center;color:#999;font-size:14px;">@</div>`;

    // Username & Caption
    popup.querySelector('.popup-username-{{ section.id }}').textContent = username;
    popup.querySelector('.popup-caption-{{ section.id }}').textContent = caption;

    // Products
    const productList = popup.querySelector('.popup-product-list-{{ section.id }}');
    productList.innerHTML = '';

    const productsTitle = popup.querySelector('.products-title-{{ section.id }}');

    if (!hasProducts) {
      productsTitle.style.display = 'none';
    } else {
      productsTitle.style.display = 'block';

      const minis = post.querySelectorAll('.product-mini-{{ section.id }}');

      minis.forEach((mini, i) => {
        const title   = mini.dataset.productTitle || `Product ${i+1}`;
        const price   = parseFloat(mini.dataset.productPrice) || 99;
        const compare = parseFloat(mini.dataset.productComparePrice);
        const url     = mini.dataset.productUrl || '#';
        const imgSrc  = mini.dataset.productImage || mini.querySelector('img')?.src || '';

        let priceHtml = compare && compare > price
          ? `<span class="popup-price-original-{{ section.id }}">$${compare.toFixed(2)}</span>
             <span class="popup-price-current-{{ section.id }} popup-price-sale-{{ section.id }}">$${price.toFixed(2)}</span>`
          : `<span class="popup-price-current-{{ section.id }}">$${price.toFixed(2)}</span>`;

        const card = document.createElement('a');
        card.href = url;
        card.className = 'popup-product-card-{{ section.id }}';
        card.innerHTML = `
          <div class="popup-product-row-{{ section.id }}">
            <div class="popup-product-image-wrapper-{{ section.id }}">
              ${imgSrc ? `<img src="${imgSrc}" alt="${title}" class="popup-product-img-{{ section.id }}">`
                      : `<div class="popup-product-img-{{ section.id }}" style="background:#f8f8f8;display:flex;align-items:center;justify-content:center;color:#ccc;">P${i+1}</div>`}
            </div>
            <div class="popup-product-info-{{ section.id }}">
              <p class="popup-product-name-{{ section.id }}">${title}</p>
              <div class="popup-price-row-{{ section.id }}">${priceHtml}</div>
            </div>
            <div class="popup-product-link-{{ section.id }}">View</div>
          </div>
        `;
        productList.appendChild(card);
      });

      // X·ª≠ l√Ω +more n·∫øu c√≥
      const more = post.querySelector('.more-count-{{ section.id }}');
      if (more && more.textContent.includes('+')) {
        const extra = parseInt(more.textContent.replace('+','')) || 0;
        for (let i = 0; i < extra; i++) {
          const card = document.createElement('a');
          card.href = '#';
          card.className = 'popup-product-card-{{ section.id }}';
          card.innerHTML = `
            <div class="popup-product-row-{{ section.id }}">
              <div class="popup-product-image-wrapper-{{ section.id }}">
                <div class="popup-product-img-{{ section.id }}" style="background:#f8f8f8;display:flex;align-items:center;justify-content:center;color:#ccc;">+${i+1}</div>
              </div>
              <div class="popup-product-info-{{ section.id }}">
                <p class="popup-product-name-{{ section.id }}">More Product ${i+1}</p>
                <div class="popup-price-row-{{ section.id }}">
                  <span class="popup-price-current-{{ section.id }}">$89.00</span>
                </div>
              </div>
              <div class="popup-product-link-{{ section.id }}">View</div>
            </div>
          `;
          productList.appendChild(card);
        }
      }
    }

    // M·ªü popup
    popup.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  // G·∫Øn s·ª± ki·ªán click cho t·ª´ng post
  socialPosts.forEach(post => {
    post.addEventListener('click', e => {
      e.preventDefault();
      e.stopPropagation();
      openSocialPopup(post);
    });
  });

  // ƒê√≥ng popup khi click b√™n ngo√†i
  popup.addEventListener('click', e => {
    if (e.target === popup) closeSocialPopup();
  });

  // ƒê√≥ng b·∫±ng ph√≠m Esc
  document.addEventListener('keydown', e => {
    if (e.key === 'Escape' && popup.classList.contains('active')) {
      closeSocialPopup();
    }
  });

  // ƒê√≥ng b·∫±ng n√∫t close
  popup.querySelector('.popup-close-{{ section.id }}')?.addEventListener('click', e => {
    e.preventDefault();
    closeSocialPopup();
  });
});
</script>
