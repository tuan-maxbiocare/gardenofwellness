<section
  class="skin-compare-section"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  "
>
  <div class="page-width">

    <h2 class="skin-compare-heading">
      {{ section.settings.heading }}
    </h2>

    <!-- PRODUCT IMAGES ON TOP - ALL DEVICES -->
    <div class="skin-compare-top-products">
      {% assign col_index = 0 %}
      {% for block in section.blocks %}
        {% if block.type == 'product_image' %}
          {% assign col_index = col_index | plus: 1 %}
          <div
            class="skin-compare-top-product"
            data-row="{{ col_index }}"
            {{ block.shopify_attributes }}
          >
            {% if block.settings.image %}
              <img
                src="{{ block.settings.image | image_url: width: 300 }}"
                alt="{{ block.settings.title }}"
                loading="lazy"
                class="product-image-top"
                width="auto"
                height="auto"
              >
            {% endif %}
            <p class="product-title-top">{{ block.settings.title }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- MOBILE TABLES (HIDDEN BY DEFAULT) -->
    <div class="skin-compare-mobile-tables">
      {% assign row_index = 0 %}
      {% for block in section.blocks %}
        {% if block.type == 'product_row' %}
          {% assign row_index = row_index | plus: 1 %}
          <div class="mobile-product-table" data-row="{{ row_index }}">
            <div class="mobile-table-header">
              <h3 class="mobile-product-name">{{ block.settings.product_name }}</h3>
            </div>
            <div class="mobile-table-content">
              {% for i in (1..5) %}
                {% assign skin_type_key = 'skin_type_' | append: i %}
                {% assign cell_key = 'cell_' | append: i %}
                <div class="mobile-table-row">
                  <div class="mobile-table-cell mobile-table-cell-title">
                    {{ section.settings[skin_type_key] }}
                  </div>
                  <div class="mobile-table-cell mobile-table-cell-icon">
                    {% if block.settings[cell_key] %}
                      <div class="check-icon">
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                          <circle cx="10" cy="10" r="8" fill="{{ section.settings.check_color }}"/>
                          <path d="M7 10L9 12L13 8" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      </div>
                    {% else %}
                      <div class="cross-icon">
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                          <circle cx="10" cy="10" r="8" stroke="{{ section.settings.cross_color }}" stroke-width="2"/>
                          <path d="M7 7L13 13" stroke="{{ section.settings.cross_color }}" stroke-width="2" stroke-linecap="round"/>
                          <path d="M13 7L7 13" stroke="{{ section.settings.cross_color }}" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                      </div>
                    {% endif %}
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- DESKTOP TABLE -->
    <div class="skin-compare-table-wrapper">
      <table class="skin-compare-table">
        <thead>
          <tr>
            <th class="row-title-header"></th>
            {% for i in (1..5) %}
              {% assign skin_type_key = 'skin_type_' | append: i %}
              <th class="skin-type-header">
                <span class="skin-type-title">{{ section.settings[skin_type_key] }}</span>
              </th>
            {% endfor %}
          </tr>
        </thead>

        <tbody>
          {% assign row_index = 0 %}
          {% for block in section.blocks %}
            {% if block.type == 'product_row' %}
              {% assign row_index = row_index | plus: 1 %}
              <tr class="comparison-row" data-row="{{ row_index }}" {{ block.shopify_attributes }}>
                <td class="product-title-cell">
                  <span class="product-name-cell">{{ block.settings.product_name }}</span>
                </td>
                
                {% for i in (1..5) %}
                  {% assign cell_key = 'cell_' | append: i %}
                  <td class="comparison-cell" data-row="{{ row_index }}">
                    {% if block.settings[cell_key] %}
                      <div class="check-icon">
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                          <circle cx="10" cy="10" r="8" fill="{{ section.settings.check_color }}"/>
                          <path d="M7 10L9 12L13 8" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      </div>
                    {% else %}
                      <div class="cross-icon">
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                          <circle cx="10" cy="10" r="8" stroke="{{ section.settings.cross_color }}" stroke-width="2"/>
                          <path d="M7 7L13 13" stroke="{{ section.settings.cross_color }}" stroke-width="2" stroke-linecap="round"/>
                          <path d="M13 7L7 13" stroke="{{ section.settings.cross_color }}" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                      </div>
                    {% endif %}
                  </td>
                {% endfor %}
              </tr>
            {% endif %}
          {% endfor %}
        </tbody>
      </table>
    </div>

    {% if section.settings.show_conclusion %}
      <div class="skin-compare-conclusion">
        <p class="conclusion-label">{{ section.settings.conclusion_label }}</p>
        <div class="conclusion-text">{{ section.settings.conclusion }}</div>
      </div>
    {% endif %}

  </div>
</section>

