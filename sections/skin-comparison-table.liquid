<script>
document.addEventListener('DOMContentLoaded', () => {
  const topProducts = document.querySelectorAll('.skin-compare-top-product');
  const productRows = document.querySelectorAll('.comparison-row');
  const productTitleCells = document.querySelectorAll('.product-title-cell');
  const comparisonCells = document.querySelectorAll('.comparison-cell');
  
  // Mobile tables
  const mobileTables = document.querySelectorAll('.mobile-product-table');
  
  // Smooth scroll cho mobile khi click sản phẩm
  function scrollToProduct(productElement) {
    if (window.innerWidth <= 768) {
      const container = document.querySelector('.skin-compare-top-products');
      const productRect = productElement.getBoundingClientRect();
      const containerRect = container.getBoundingClientRect();
      
      // Tính toán vị trí để căn giữa
      const scrollLeft = productElement.offsetLeft - (containerRect.width / 2) + (productRect.width / 2);
      
      container.scrollTo({
        left: scrollLeft,
        behavior: 'smooth'
      });
    }
  }
  
  // Khởi tạo: trên mobile hiển thị table sản phẩm đầu tiên (không highlight)
  function initializeMobile() {
    if (window.innerWidth <= 768 && mobileTables.length > 0) {
      // Hiển thị table sản phẩm đầu tiên
      mobileTables[0].classList.add('active');
      
      // Đánh dấu sản phẩm đầu tiên là đang xem
      topProducts[0].classList.add('viewing');
      
      // Scroll sản phẩm đầu tiên vào giữa
      setTimeout(() => {
        scrollToProduct(topProducts[0]);
      }, 100);
      
      // Không active highlight
      clearAllActive();
    }
  }
  
  // Không set active row mặc định cho desktop
  let activeRow = null;
  
  // Hàm kích hoạt hàng (highlight)
  function activateRow(rowIndex) {
    // Xóa active class từ tất cả
    topProducts.forEach(p => p.classList.remove('active'));
    productRows.forEach(r => r.classList.remove('active-row'));
    productTitleCells.forEach(c => c.classList.remove('active-cell'));
    comparisonCells.forEach(c => c.classList.remove('active-cell'));
    
    // Thêm active class cho hàng tương ứng
    topProducts.forEach(p => {
      if (p.dataset.row === rowIndex) {
        p.classList.add('active');
      }
    });
    
    productRows.forEach(r => {
      if (r.dataset.row === rowIndex) {
        r.classList.add('active-row');
      }
    });
    
    productTitleCells.forEach(c => {
      if (c.parentElement.dataset.row === rowIndex) {
        c.classList.add('active-cell');
      }
    });
    
    comparisonCells.forEach(c => {
      if (c.dataset.row === rowIndex) {
        c.classList.add('active-cell');
      }
    });
    
    activeRow = rowIndex;
  }

  // Hàm xóa tất cả active (chỉ highlight)
  function clearAllActive() {
    topProducts.forEach(p => p.classList.remove('active'));
    productRows.forEach(r => r.classList.remove('active-row'));
    productTitleCells.forEach(c => c.classList.remove('active-cell'));
    comparisonCells.forEach(c => c.classList.remove('active-cell'));
    activeRow = null;
  }

  // Hàm chuyển đổi sản phẩm đang xem (mobile)
  function switchMobileProduct(rowIndex) {
    // Ẩn tất cả mobile tables
    mobileTables.forEach(t => t.classList.remove('active'));
    
    // Xóa viewing class từ tất cả sản phẩm
    topProducts.forEach(p => p.classList.remove('viewing'));
    
    // Hiển thị table sản phẩm được chọn
    mobileTables.forEach(t => {
      if (t.dataset.row === rowIndex) {
        t.classList.add('active');
      }
    });
    
    // Đánh dấu sản phẩm đang xem
    topProducts.forEach(p => {
      if (p.dataset.row === rowIndex) {
        p.classList.add('viewing');
      }
    });
  }

  // Xử lý hover cho top product images (desktop)
  topProducts.forEach(product => {
    product.addEventListener('mouseenter', () => {
      if (window.innerWidth > 768) { // Chỉ trên desktop
        activateRow(product.dataset.row);
      }
    });
    
    product.addEventListener('mouseleave', () => {
      if (window.innerWidth > 768) {
        clearAllActive();
      }
    });
    
    // Click để chuyển đổi sản phẩm (mobile) hoặc highlight (desktop)
    product.addEventListener('click', (e) => {
      e.preventDefault();
      
      if (window.innerWidth <= 768) {
        // MOBILE: chuyển sang sản phẩm được click
        switchMobileProduct(product.dataset.row);
        // Không highlight trên mobile
        clearAllActive();
        // Scroll để sản phẩm vào giữa
        scrollToProduct(product);
      } else {
        // DESKTOP: toggle highlight
        if (product.classList.contains('active')) {
          // Nếu đang active, thì clear
          clearAllActive();
        } else {
          // Nếu chưa active, thì active
          activateRow(product.dataset.row);
        }
      }
    });
  });

  // Desktop event handlers (chỉ trên desktop)
  productTitleCells.forEach(cell => {
    cell.addEventListener('mouseenter', () => {
      if (window.innerWidth > 768) {
        const rowIndex = cell.parentElement.dataset.row;
        activateRow(rowIndex);
      }
    });
    
    cell.addEventListener('mouseleave', () => {
      if (window.innerWidth > 768) {
        clearAllActive();
      }
    });
    
    cell.addEventListener('click', (e) => {
      if (window.innerWidth > 768) {
        e.preventDefault();
        const rowIndex = cell.parentElement.dataset.row;
        
        if (cell.parentElement.classList.contains('active-row')) {
          // Nếu đang active, thì clear
          clearAllActive();
        } else {
          // Nếu chưa active, thì active
          activateRow(rowIndex);
        }
      }
    });
  });

  productRows.forEach(row => {
    row.addEventListener('mouseenter', () => {
      if (window.innerWidth > 768) {
        const rowIndex = row.dataset.row;
        activateRow(rowIndex);
      }
    });
    
    row.addEventListener('mouseleave', () => {
      if (window.innerWidth > 768) {
        clearAllActive();
      }
    });
    
    row.addEventListener('click', (e) => {
      if (window.innerWidth > 768) {
        e.preventDefault();
        
        if (row.classList.contains('active-row')) {
          // Nếu đang active, thì clear
          clearAllActive();
        } else {
          // Nếu chưa active, thì active
          activateRow(row.dataset.row);
        }
      }
    });
  });

  // Touch events cho mobile (để tránh delay)
  topProducts.forEach(product => {
    product.addEventListener('touchend', (e) => {
      if (window.innerWidth <= 768) {
        e.preventDefault();
        switchMobileProduct(product.dataset.row);
        clearAllActive();
        scrollToProduct(product);
      }
    });
  });

  // Click ra ngoài để clear active (chỉ trên desktop)
  document.addEventListener('click', (e) => {
    if (window.innerWidth > 768) {
      if (!e.target.closest('.skin-compare-top-product') && 
          !e.target.closest('.comparison-row') &&
          !e.target.closest('.product-title-cell') &&
          !e.target.closest('.comparison-cell')) {
        clearAllActive();
      }
    }
  });

  // Xử lý resize
  window.addEventListener('resize', () => {
    // Clear highlight khi resize
    clearAllActive();
    
    // Nếu chuyển sang mobile và chưa có sản phẩm nào đang viewing
    if (window.innerWidth <= 768) {
      const hasViewingProduct = document.querySelector('.skin-compare-top-product.viewing');
      const hasActiveTable = document.querySelector('.mobile-product-table.active');
      
      if (!hasViewingProduct && topProducts.length > 0) {
        // Đặt sản phẩm đầu tiên là đang xem
        topProducts[0].classList.add('viewing');
      }
      
      if (!hasActiveTable && mobileTables.length > 0) {
        // Hiển thị table sản phẩm đầu tiên
        mobileTables[0].classList.add('active');
      }
    }
    
    // Nếu chuyển sang desktop, xóa viewing class
    if (window.innerWidth > 768) {
      topProducts.forEach(p => p.classList.remove('viewing'));
    }
  });

  // Khởi tạo
  initializeMobile();
});
</script>
