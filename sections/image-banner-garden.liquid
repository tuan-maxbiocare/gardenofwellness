{% comment %}
  Image Banner – Garden Style (Dawn Blocks)
  Updated: 2026
{% endcomment %}

<section class="garden-banner garden-banner-{{ section.id }}">
  {% if section.settings.bg_image != blank %}
    <div
      class="garden-banner__bg"
      style="background-image: url({{ section.settings.bg_image | image_url: width: 2400 }});"
    ></div>
  {% endif %}

  <div class="garden-banner__container garden-banner__container--{{ section.settings.content_position }}">
    <div class="garden-banner__content">

      <!-- HEADER ROW: HEADING LEFT – BUTTON RIGHT -->
      <div class="garden-banner__header-row">
        {% for block in section.blocks %}
          {% if block.type == 'heading' %}
            <h2 class="garden-banner__heading" {{ block.shopify_attributes }}>
              {{ block.settings.heading }}
            </h2>
          {% endif %}
        {% endfor %}

        {% for block in section.blocks %}
          {% if block.type == 'button' and block.settings.label != blank %}
            <a
              href="{{ block.settings.link }}"
              class="garden-banner__button garden-banner__button--inline"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.label }}
            </a>
          {% endif %}
        {% endfor %}
      </div>

      <!-- TEXT BLOCKS -->
      {% for block in section.blocks %}
        {% if block.type == 'text' %}
          <div class="garden-banner__text" {{ block.shopify_attributes }}>
            {{ block.settings.text }}
          </div>
        {% endif %}
      {% endfor %}

    </div>
  </div>
</section>

<style>
.garden-banner {
  position: relative;
  width: 100%;
  min-height: 520px;
  overflow: hidden;
}

.garden-banner__bg {
  position: absolute;
  inset: 0;
  background-size: cover;
  background-position: center;
  z-index: 1;
}

.garden-banner__container {
  position: relative;
  z-index: 2;
  max-width: 1400px;
  margin: 0 auto;
  padding: 40px 24px 0;
  min-height: 520px;
  display: flex;
}

/* CONTENT POSITION */
.garden-banner__container--top {
  align-items: flex-start;
}
.garden-banner__container--center {
  align-items: center;
}
.garden-banner__container--bottom {
  align-items: flex-end;
}

/* CONTENT BOX */
.garden-banner__content {
  max-width: 750px;
  background-color: {{ section.settings.box_bg }};
  color: {{ section.settings.text_color }};
  padding: 20px 20px;
  margin-bottom: 0;
}

/* HEADER ROW */
.garden-banner__header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24px;
  margin-bottom: 14px;
}

.garden-banner__heading {
  font-family: Georgia, 'Times New Roman', serif;
  font-size: 52px;
  line-height: 1.05;
  margin: 0;
  flex: 1;
}

/* TEXT */
.garden-banner__text {
  font-size: 15px;
  line-height: 1.75;
}

.garden-banner__text p {
  margin: 0 0 14px;
}

.garden-banner__text em {
  display: block;
  margin-top: 10px;
  font-style: italic;
}

/* BUTTON */
.garden-banner__button {
  padding: 10px 22px;
  border: 1px solid {{ section.settings.button_border }};
  color: {{ section.settings.button_color }};
  text-decoration: none;
  font-size: 14px;
  transition: all 0.25s ease;
  white-space: nowrap;
}

.garden-banner__button:hover {
  background-color: {{ section.settings.button_color }};
  color: {{ section.settings.box_bg }};
}

/* MOBILE */
@media (max-width: 768px) {
  .garden-banner {
    min-height: auto;
  }

  .garden-banner__container {
    min-height: auto;
    padding: 24px 16px 0;
  }

  .garden-banner__content {
    max-width: 100%;
    padding: 28px 22px;
  }

  .garden-banner__header-row {
    flex-direction: column;
    align-items: flex-start;
    gap: 14px;
  }

  .garden-banner__heading {
    font-size: 36px;
  }
}
</style>

{% schema %}
{
  "name": "Image Banner – Garden",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image"
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Content position",
      "default": "bottom",
      "options": [
        { "value": "top", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "bottom", "label": "Bottom" }
      ]
    },
    {
      "type": "color",
      "id": "box_bg",
      "label": "Content box background",
      "default": "#2f4a2f"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_border",
      "label": "Button border color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading text",
          "default": "The Gardens"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text content",
          "default": "<p><strong>A Living Sanctuary of Wellness</strong></p><p>Your content goes here.</p><p><em>This is where Garden of Wellness was born.</em></p>"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Button label",
          "default": "Explore Our Research Park"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Banner – Garden",
      "blocks": [
        { "type": "heading" },
        { "type": "text" },
        { "type": "button" }
      ]
    }
  ]
}
{% endschema %}
