{% comment %}
  Section: Products â€“ Background Image Columns
{% endcomment %}

{%- if section.blocks.size > 0 -%}
{% liquid
  capture styles
    echo '--section-padding-top:' | append: section.settings.padding_top | append: 'px;'
    echo '--section-padding-bottom:' | append: section.settings.padding_bottom | append: 'px;'
    echo '--section-padding-top-mobile:' | append: section.settings.padding_top_mobile | append: 'px;'
    echo '--section-padding-bottom-mobile:' | append: section.settings.padding_bottom_mobile | append: 'px;'
  endcapture
%}

<section 
  class="products-image-columns section color-{{ section.settings.color_scheme }}" 
  id="section-{{ section.id }}" 
  data-section-id="{{ section.id }}" 
  data-section-type="products-image-columns"
  style="{{ styles }}"
>
  <div class="products-image-columns__inner {% if section.settings.section_width == 'full-width' %}full-width{% endif %}">
    
    {% comment %} Header Section {% endcomment %}
    {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
      <div class="products-image-columns__header page-width">
        {%- if section.settings.heading != blank -%}
          <h2 class="products-image-columns__heading">
            {{ section.settings.heading }}
            {%- if section.settings.heading_emphasis != blank -%}
              <span class="products-image-columns__heading-emphasis">
                {{ section.settings.heading_emphasis }}
              </span>
            {%- endif -%}
          </h2>
        {%- endif -%}
        
        {%- if section.settings.subheading != blank -%}
          <div class="products-image-columns__subheading">
            {{ section.settings.subheading }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {% comment %} Image Grid Section {% endcomment %}
    <div class="products-image-columns__grid">
      {%- for block in section.blocks -%}
        <div class="products-image-columns__item" {{ block.shopify_attributes }}>
          {%- if block.settings.button_link != blank -%}
            <a href="{{ block.settings.button_link }}" class="products-image-columns__link"{% if block.settings.new_tab %} target="_blank"{% endif %}>
          {%- endif -%}
          
          <div class="products-image-columns__image-container">
            {%- if block.settings.image != blank -%}
              <div class="products-image-columns__image-wrapper">
                <img
                  class="products-image-columns__image lazyload"
                  src="{{ block.settings.image | img_url: '300x' }}"
                  data-src="{{ block.settings.image | img_url: '800x' }}"
                  data-sizes="auto"
                  alt="{{ block.settings.image.alt | escape }}"
                  loading="lazy"
                  width="auto"
                  height="auto"
                >
              </div>
            {%- else -%}
              <div class="products-image-columns__placeholder">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {%- endif -%}

            <div class="products-image-columns__overlay" style="background-color: rgba(0,0,0,{{ block.settings.overlay_opacity | divided_by: 100.0 }});"></div>

            <div class="products-image-columns__content">
              {%- if block.settings.icon != blank -%}
                <div class="products-image-columns__icon">
                  <img
                    src="{{ block.settings.icon | img_url: '100x' }}"
                    alt=""
                    loading="lazy"
                    width="auto"
                    height="auto"
                  >
                </div>
              {%- endif -%}
              
              {%- if block.settings.title != blank -%}
                <h3 class="products-image-columns__item-title">{{ block.settings.title | escape }}</h3>
              {%- endif -%}
              
              {%- if block.settings.text != blank -%}
                <div class="products-image-columns__item-text">{{ block.settings.text }}</div>
              {%- endif -%}
            </div>
          </div>
          
          {%- if block.settings.button_link != blank -%}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  #section-{{ section.id }}.products-image-columns {
    padding-top: var(--section-padding-top);
    padding-bottom: var(--section-padding-bottom);
    {%- if section.settings.background_color != blank -%}
    background-color: {{ section.settings.background_color }};
    {%- endif -%}
  }

  #section-{{ section.id }} .products-image-columns__inner {
    {%- if section.settings.section_width != 'full-width' -%}
    max-width: 1200px;
    margin: 0 auto;
    {%- endif -%}
  }

  /* HEADER STYLES - Matching the provided file */
  #section-{{ section.id }} .products-image-columns__header {
    text-align: center;
    margin-bottom: 48px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  #section-{{ section.id }} .products-image-columns__heading {
    font-size: clamp(32px, 4vw, 56px);
    font-weight: 500;
    margin: 0;
    color: {{ section.settings.heading_color }};
    line-height: 1.2;
  }

  #section-{{ section.id }} .products-image-columns__heading-emphasis {
    font-style: italic;
    font-weight: 400;
    margin-left: 8px;
  }

  #section-{{ section.id }} .products-image-columns__subheading {
    margin-top: 12px;
    font-size: 16px;
    color: rgba(var(--color-foreground), 0.7);
    opacity: 0.8;
  }

  /* GRID STYLES */
  #section-{{ section.id }} .products-image-columns__grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: 0;
    margin-bottom: 60px;
  }

  /* COLUMN ITEM */
  #section-{{ section.id }} .products-image-columns__item {
    position: relative;
    height: 100%;
  }

  #section-{{ section.id }} .products-image-columns__link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  /* IMAGE CONTAINER */
  #section-{{ section.id }} .products-image-columns__image-container {
    position: relative;
    width: 100%;
    height: 450px;
    overflow: hidden;
  }

  #section-{{ section.id }} .products-image-columns__image-wrapper {
    width: 100%;
    height: 100%;
  }

  #section-{{ section.id }} .products-image-columns__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  #section-{{ section.id }} .products-image-columns__item:hover .products-image-columns__image {
    transform: scale(1.05);
  }

  #section-{{ section.id }} .products-image-columns__placeholder {
    width: 100%;
    height: 100%;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* OVERLAY */
  #section-{{ section.id }} .products-image-columns__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
  }

  /* CONTENT */
  #section-{{ section.id }} .products-image-columns__content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    z-index: 2;
    color: #ffffff;
  }

  /* ICON */
  #section-{{ section.id }} .products-image-columns__icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    border: 1.5px solid rgba(255, 255, 255, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    background-color: rgba(255, 255, 255, 0.1);
  }

  #section-{{ section.id }} .products-image-columns__icon img {
    width: 30px;
    height: 30px;
    object-fit: contain;
    filter: brightness(0) invert(1);
  }

  /* TITLE AND TEXT */
  #section-{{ section.id }} .products-image-columns__item-title {
    font-family: Georgia, 'Times New Roman', serif;
    font-size: 24px;
    font-weight: normal;
    margin: 0 0 10px 0;
    color: #ffffff;
  }

  #section-{{ section.id }} .products-image-columns__item-text {
    font-size: 14px;
    line-height: 1.6;
    max-width: 280px;
    color: rgba(255, 255, 255, 0.9);
  }

  /* MOBILE RESPONSIVE */
  @media screen and (max-width: 989px) {
    #section-{{ section.id }}.products-image-columns {
      padding-top: var(--section-padding-top-mobile);
      padding-bottom: var(--section-padding-bottom-mobile);
    }

    #section-{{ section.id }} .products-image-columns__header {
      margin-bottom: 40px;
      padding: 0 20px;
    }

    #section-{{ section.id }} .products-image-columns__heading {
      font-size: clamp(28px, 4vw, 40px);
    }

    #section-{{ section.id }} .products-image-columns__subheading {
      font-size: 15px;
      margin-top: 10px;
    }

    #section-{{ section.id }} .products-image-columns__grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      margin-bottom: 40px;
    }

    #section-{{ section.id }} .products-image-columns__image-container {
      height: 400px;
    }
  }

  @media screen and (max-width: 768px) {
    #section-{{ section.id }} .products-image-columns__header {
      margin-bottom: 32px;
    }

    #section-{{ section.id }} .products-image-columns__heading {
      font-size: clamp(24px, 4vw, 32px);
    }

    #section-{{ section.id }} .products-image-columns__subheading {
      font-size: 14px;
    }

    #section-{{ section.id }} .products-image-columns__image-container {
      height: 350px;
    }

    {%- if section.settings.columns_mobile == 2 -%}
      @media screen and (max-width: 480px) {
        #section-{{ section.id }} .products-image-columns__grid {
          grid-template-columns: 1fr;
        }
      }
    {%- endif -%}
  }

  @media screen and (max-width: 480px) {
    #section-{{ section.id }} .products-image-columns__header {
      margin-bottom: 30px;
      padding: 0 15px;
    }

    #section-{{ section.id }} .products-image-columns__heading {
      font-size: clamp(20px, 4vw, 28px);
    }

    #section-{{ section.id }} .products-image-columns__subheading {
      font-size: 13px;
      margin-top: 8px;
    }

    #section-{{ section.id }} .products-image-columns__image-container {
      height: 300px;
    }

    #section-{{ section.id }} .products-image-columns__icon {
      width: 50px;
      height: 50px;
      margin-bottom: 15px;
    }

    #section-{{ section.id }} .products-image-columns__icon img {
      width: 25px;
      height: 25px;
    }

    #section-{{ section.id }} .products-image-columns__item-title {
      font-size: 20px;
    }

    #section-{{ section.id }} .products-image-columns__item-text {
      font-size: 13px;
    }
  }

  /* FIX FOR FULL-WIDTH MODE */
  #section-{{ section.id }} .products-image-columns__inner.full-width {
    max-width: 100% !important;
    padding: 0 !important;
  }

  #section-{{ section.id }} .products-image-columns__inner.full-width .products-image-columns__header {
    padding: 0 20px;
  }

  @media screen and (max-width: 989px) {
    #section-{{ section.id }} .products-image-columns__inner.full-width .products-image-columns__header {
      padding: 0 15px;
    }
  }
</style>
{%- endif -%}

