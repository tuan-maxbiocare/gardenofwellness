      font-size: 40px;
    }
    
    #section-{{ section.id }} .products-image-columns__main-heading.heading-xl {
      font-size: 36px;
    }
    
    #section-{{ section.id }} .products-image-columns__main-heading.heading-lg {
      font-size: 32px;
    }
    
    #section-{{ section.id }} .products-image-columns__main-heading.heading-md {
      font-size: 28px;
    }
    
    #section-{{ section.id }} .products-image-columns__main-heading.heading-sm {
      font-size: 24px;
    }
    
    #section-{{ section.id }} .products-image-columns__main-heading.heading-xs {
      font-size: 22px;
    }

    #section-{{ section.id }} .products-image-columns__grid {
