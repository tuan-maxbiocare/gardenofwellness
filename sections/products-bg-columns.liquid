{%- if section.blocks.size > 0 -%}
<section class="products-image-columns" id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="products-image-columns">
  <div class="products-image-columns__inner {% if section.settings.section_width == 'full-width' %}full-width{% else %}page-width{% endif %}">
    
    {% comment %} Header Section {% endcomment %}
    <div class="products-image-columns__header">
      {%- if section.settings.heading != blank -%}
        <{{ section.settings.heading_tag }} class="products-image-columns__main-heading {{ section.settings.heading_size }}">
          {{ section.settings.heading | escape }}
        </{{ section.settings.heading_tag }}>
      {%- endif -%}
      
      {%- if section.settings.subheading != blank -%}
        <{{ section.settings.subheading_tag }} class="products-image-columns__subheading {{ section.settings.subheading_size }}">
          {{ section.settings.subheading | escape }}
        </{{ section.settings.subheading_tag }}>
      {%- endif -%}
      
      {%- if section.settings.show_divider -%}
        <div class="products-image-columns__divider"></div>
      {%- endif -%}
    </div>

    {% comment %} Image Grid Section {% endcomment %}
    <div class="products-image-columns__grid">
      {%- for block in section.blocks -%}
        <div class="products-image-columns__item" {{ block.shopify_attributes }}>
          {%- if block.settings.button_link != blank -%}
            <a href="{{ block.settings.button_link }}" class="products-image-columns__link"{% if block.settings.new_tab %} target="_blank"{% endif %}>
          {%- endif -%}
          
          <div class="products-image-columns__image-container">
            {%- if block.settings.image != blank -%}
              <div class="products-image-columns__image-wrapper">
                <img
                  class="products-image-columns__image lazyload"
                  src="{{ block.settings.image | img_url: '300x' }}"
                  data-src="{{ block.settings.image | img_url: '800x' }}"
                  data-sizes="auto"
                  alt="{{ block.settings.image.alt | escape }}"
                  loading="lazy"
                  width="auto"
                  height="auto"
                >
              </div>
            {%- else -%}
              <div class="products-image-columns__placeholder">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {%- endif -%}

            <div class="products-image-columns__overlay" style="background-color: rgba(0,0,0,{{ block.settings.overlay_opacity | divided_by: 100.0 }});"></div>

            <div class="products-image-columns__content">
              {%- if block.settings.icon != blank -%}
                <div class="products-image-columns__icon">
                  <img
                    src="{{ block.settings.icon | img_url: '100x' }}"
                    alt=""
                    loading="lazy"
                    width="auto"
                    height="auto"
                  >
                </div>
              {%- endif -%}
              
              {%- if block.settings.title != blank -%}
                <h3 class="products-image-columns__item-title">{{ block.settings.title | escape }}</h3>
              {%- endif -%}
              
              {%- if block.settings.text != blank -%}
                <div class="products-image-columns__item-text">{{ block.settings.text }}</div>
              {%- endif -%}
            </div>
          </div>
          
          {%- if block.settings.button_link != blank -%}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  #section-{{ section.id }}.products-image-columns {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- if section.settings.background_color != blank -%}
    background-color: {{ section.settings.background_color }};
    {%- endif -%}
  }

  #section-{{ section.id }} .products-image-columns__inner {
    {%- if section.settings.section_width != 'full-width' -%}
    max-width: 1200px;
    margin: 0 auto;
    {%- endif -%}
    padding: 0 20px;
  }

  /* HEADER STYLES */
  #section-{{ section.id }} .products-image-columns__header {
    text-align: center;
    margin-bottom: 40px;
  }

  #section-{{ section.id }} .products-image-columns__main-heading {
    font-family: Georgia, 'Times New Roman', serif;
    font-weight: normal;
    margin: 0 0 10px 0;
    color: {{ section.settings.heading_color }};
  }

  #section-{{ section.id }} .products-image-columns__subheading {
    font-weight: normal;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin: 0 0 30px 0;
    color: {{ section.settings.subheading_color }};
    opacity: 0.7;
  }

  /* Heading size classes */
  #section-{{ section.id }} .products-image-columns__main-heading.heading-xxl {
    font-size: 48px;
    line-height: 1.1;
  }
  
  #section-{{ section.id }} .products-image-columns__main-heading.heading-xl {
    font-size: 42px;
    line-height: 1.2;
  }
  
  #section-{{ section.id }} .products-image-columns__main-heading.heading-lg {
    font-size: 36px;
    line-height: 1.3;
  }
  
  #section-{{ section.id }} .products-image-columns__main-heading.heading-md {
    font-size: 32px;
    line-height: 1.3;
  }
  
  #section-{{ section.id }} .products-image-columns__main-heading.heading-sm {
    font-size: 28px;
    line-height: 1.4;
  }
  
  #section-{{ section.id }} .products-image-columns__main-heading.heading-xs {
    font-size: 24px;
    line-height: 1.4;
  }

  /* Subheading size classes */
  #section-{{ section.id }} .products-image-columns__subheading.subheading-lg {
    font-size: 18px;
  }
  
  #section-{{ section.id }} .products-image-columns__subheading.subheading-md {
    font-size: 16px;
  }
  
  #section-{{ section.id }} .products-image-columns__subheading.subheading-sm {
    font-size: 15px;
  }
  
  #section-{{ section.id }} .products-image-columns__subheading.subheading-xs {
    font-size: 14px;
  }

  #section-{{ section.id }} .products-image-columns__divider {
    width: 60px;
    height: 1px;
    background-color: {{ section.settings.text_color }};
    margin: 30px auto;
    opacity: 0.3;
  }

  /* GRID STYLES */
  #section-{{ section.id }} .products-image-columns__grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: 0;
    margin-bottom: 60px;
  }

  /* COLUMN ITEM */
  #section-{{ section.id }} .products-image-columns__item {
    position: relative;
    height: 100%;
  }

  #section-{{ section.id }} .products-image-columns__link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  /* IMAGE CONTAINER */
  #section-{{ section.id }} .products-image-columns__image-container {
    position: relative;
    width: 100%;
    height: 450px;
    overflow: hidden;
  }

  #section-{{ section.id }} .products-image-columns__image-wrapper {
    width: 100%;
    height: 100%;
  }

  #section-{{ section.id }} .products-image-columns__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  #section-{{ section.id }} .products-image-columns__item:hover .products-image-columns__image {
    transform: scale(1.05);
  }

  #section-{{ section.id }} .products-image-columns__placeholder {
    width: 100%;
    height: 100%;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* OVERLAY */
  #section-{{ section.id }} .products-image-columns__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
  }

  /* CONTENT */
  #section-{{ section.id }} .products-image-columns__content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    z-index: 2;
    color: #ffffff;
  }

  /* ICON */
  #section-{{ section.id }} .products-image-columns__icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    border: 1.5px solid rgba(255, 255, 255, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    background-color: rgba(255, 255, 255, 0.1);
  }

  #section-{{ section.id }} .products-image-columns__icon img {
    width: 30px;
    height: 30px;
    object-fit: contain;
    filter: brightness(0) invert(1);
  }

  /* TITLE AND TEXT */
  #section-{{ section.id }} .products-image-columns__item-title {
    font-family: Georgia, 'Times New Roman', serif;
    font-size: 24px;
    font-weight: normal;
    margin: 0 0 10px 0;
    color: #ffffff;
  }

  #section-{{ section.id }} .products-image-columns__item-text {
    font-size: 14px;
    line-height: 1.6;
    max-width: 280px;
    color: rgba(255, 255, 255, 0.9);
  }

  /* MOBILE RESPONSIVE */
  @media screen and (max-width: 989px) {
    #section-{{ section.id }}.products-image-columns {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }

    #section-{{ section.id }} .products-image-columns__inner {
