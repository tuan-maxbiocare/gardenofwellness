      font-size: 36px;
    }
    
    #section-{{ section.id }} .products-image-columns__main-heading.heading-xl {
      font-size: 32px;
    }
    
    #section-{{ section.id }} .products-image-columns__main-heading.heading-lg {
      font-size: 28px;
    }
    
    #section-{{ section.id }} .products-image-columns__main-heading.heading-md {
      font-size: 24px;
    }
    
    #section-{{ section.id }} .products-image-columns__main-heading.heading-sm {
      font-size: 22px;
    }
    
    #section-{{ section.id }} .products-image-columns__main-heading.heading-xs {
      font-size: 20px;
    }

    /* Responsive subheading sizes */
    #section-{{ section.id }} .products-image-columns__subheading.subheading-lg {
      font-size: 16px;
    }
    
    #section-{{ section.id }} .products-image-columns__subheading.subheading-md {
      font-size: 15px;
    }
    
    #section-{{ section.id }} .products-image-columns__subheading.subheading-sm,
    #section-{{ section.id }} .products-image-columns__subheading.subheading-xs {
      font-size: 14px;
    }

    #section-{{ section.id }} .products-image-columns__image-container {
      height: 350px;
    }

    {%- if section.settings.columns_mobile == 2 -%}
      @media screen and (max-width: 480px) {
        #section-{{ section.id }} .products-image-columns__grid {
          grid-template-columns: 1fr;
        }
      }
    {%- endif -%}
  }

  @media screen and (max-width: 480px) {
    #section-{{ section.id }} .products-image-columns__main-heading.heading-xxl {
      font-size: 32px;
    }
    
    #section-{{ section.id }} .products-image-columns__main-heading.heading-xl {
